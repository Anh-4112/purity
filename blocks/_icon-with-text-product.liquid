{%- if closest.product != blank -%}
  <ul class="list-unstyled flex column gap-10">
    {%- for i in (1..5) -%}
      {%- capture svg_icon -%}svg_icon_{{ i }}{%- endcapture -%}
      {%- capture content -%}content_{{ i }}{%- endcapture -%}
      {%- if block.settings[svg_icon] != 'none' or block.settings[content] != blank -%}
        <li class="flex wrap gap-10 align-center heading-color">
          {%- if block.settings[svg_icon] != 'none' -%}
            {% render 'icon_svg_list', icon: block.settings[svg_icon] %}
          {%- endif -%}
          {%- if block.settings[content] != blank -%}
            <span class="content">{{ block.settings[content] }}</span>
          {%- endif -%}
        </li>
      {%- endif -%}
    {%- endfor -%}
  </ul>
{%- endif -%}
