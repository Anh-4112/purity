{% liquid
  assign section_st = section.settings
  assign block_st = block.settings
  assign image = block_st.image
  assign mobile_image = block_st.mobile_image | default: image
%}

{%- style -%}
  #shopify-block-{{ block.id }} {
    width: {{ block_st.width }};
  }
{%- endstyle -%}

<div class="group__block--image-with-text w-full h-full flex align-{{ block_st.vertical_alignment_group }}">
  <div
    class="w-full color-{{ block_st.color_scheme }} gradient flex relative{% if section_st.equal_height_adjustment %} h-full{% else %} h-content{% endif %}{% if block_st.content_position != 'overlay' %} flex column{% endif %}"
    {% if block_st.content_position == 'overlay' %}
      style="
        {% if block_st.image != blank or mobile_image != blank %}
          --aspect-ratio: {{ block_st.image.aspect_ratio }};
          --aspect-ratio-mb: {{ mobile_image.aspect_ratio }};
        {% else %}
          --aspect-ratio: 3/2;
        {% endif %}
      "
    {% endif %}
  >
    {%- if block_st.image.alt == blank -%}
      {%- capture alt -%}{{ block_st.heading }}{%- endcapture -%}
    {%- else -%}
      {%- assign alt = block_st.image.alt -%}
    {%- endif -%}
    <div
      class="banner banner__media rounded media{% if block_st.content_position == 'overlay' %} absolute inset-0 {% endif %}"
      style="{%- if image != blank -%}--aspect-ratio: {{ image.aspect_ratio }};{%- else -%}--aspect-ratio: 1/1; {% endif %}{%- if mobile_image -%} --aspect-ratio-mb: {{ mobile_image.aspect_ratio }};{% endif %}"
    >
      {%- if image != blank or mobile_image != blank -%}
        {%- liquid
          assign image_alt = image.alt
          if image_alt == blank
            assign image_alt = block_st.heading
          endif
        -%}
        {% render 'responsive-image',
          type: 'banner',
          container: section_st.section_width,
          image: image,
          image_mobile: mobile_image,
          image_alt: alt
        %}
      {%- else -%}
        {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
    <div class="overlay-bg rounded group__block--content w-full z-3 flex text-{{ block_st.text_alignment }}{% if block_st.content_position == 'overlay' %} {{ block_st.desktop_content_position }}{% endif %}">
      <div
        class="banner__box w-full flex column align-{{ block_st.text_alignment }}"
      >
        {% content_for 'blocks' %}
      </div>
    </div>
  </div>
</div>
