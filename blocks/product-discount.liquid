{% liquid
  assign section_st = section.settings
  assign block_st = block.settings
  assign collection = block_st.collection
  assign products = block_st.products
  assign items_to_show = block_st.items_to_show
  assign items_per_row = block_st.items_per_row
  assign items_per_row_mobile = block_st.items_per_row_mobile
  assign enable_carousel_mobile = block_st.enable_carousel_mobile
  assign column_gap_slide = 0
  if block_st.column_gap == 'large'
    assign column_gap_slide = 30
  elsif block_st.column_gap == 'medium'
    assign column_gap_slide = 20
  elsif block_st.column_gap == 'small'
    assign column_gap_slide = 10
  endif

  assign data_free_scroll = 'false'
  if items_per_row_mobile > 1 and items_per_row_mobile < 2
    assign data_free_scroll = 'true'
  elsif items_per_row_mobile > 2 and items_per_row_mobile < 3
    assign data_free_scroll = 'true'
  endif

  assign items_per_row_tablet = items_per_row
  if items_per_row > 3
    assign items_per_row_tablet = items_per_row | minus: 1
  endif

  if products != blank
    assign arr_product = products
  else
    assign arr_product = collection.products
  endif
%}
{%- capture col_style -%}
    --col-desktop: {{ items_per_row }};--col-number:{{ items_per_row_mobile }};--col-tablet: {{ items_per_row_tablet }};{{- -}}
    {% if column_gap_slide < 15 %}--gap: {{ column_gap_slide }}px;{% else %}--gap: 15px;--gap-desktop: {{  column_gap_slide }}px;{% endif %}; --col-mobile: {{ items_per_row_mobile }}
{%- endcapture -%}
<carousel-mobile
  class="grid grid-cols gap{% if data_free_scroll == 'true' %} grid_scroll{% endif %}"
  style="{{ col_style | strip | strip_newlines }}"
  data-mobile="{{ items_per_row_mobile }}"
  data-spacing="{{ column_gap_slide }}"
  data-free-scroll="{{ data_free_scroll }}"
  data-enable-carousel-mobile="{{ enable_carousel_mobile }}"
>
  {% if arr_product != blank %}
    {% for product in arr_product limit: items_to_show %}
      {% render 'card-product',
        card_product: product,
        section_id: section.id,
        class: ' grid-card-item switch-slide__mobile',
        container: section_st.section_width,
        column: items_per_row,
        column_mobile: items_per_row_mobile,
        padding: column_gap_slide,
        disable_quickview: true,
        indexFor: forloop.index,
        variant_swatch: true,
        type: 'custom',
        minimum: section_st.minimum,
        maximum: section_st.maximum,
        select_type: 'default',
        select_class: ' mt-10 mb-15 mt-1025-15 w-1025-full max-w-100'
      %}
    {% endfor %}
  {% else %}
    {% for i in (1..6) %}
      {% render 'card-product',
        section_id: section.id,
        class: ' grid-card-item switch-slide__mobile',
        indexFor: forloop.index
      %}
    {% endfor %}
  {% endif %}
</carousel-mobile>

{% schema %}
{
  "name": "t:sections.product-bundle.blocks.settings.product_discount.name",
  "class": "w-full col-1025-remaining",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.collection-list.blocks.featured_collection.settings.collection.label"
    },
    {
      "type": "product_list",
      "id": "products",
      "label": "t:sections.compact_product_bundle.blocks.settings.select_product",
      "info": "t:sections.product-bundle.blocks.settings.product_discount.info"
    },
    {
      "type": "range",
      "id": "items_to_show",
      "label": "t:sections.all.items_to_show.label",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "range",
      "id": "items_per_row",
      "label": "t:sections.all.columns_desktop.label",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "select",
      "id": "column_gap",
      "options": [
        {
          "value": "no_gap",
          "label": "t:sections.all.padding.column_gap.no_gap"
        },
        {
          "value": "small",
          "label": "t:sections.all.padding.column_gap.small"
        },
        {
          "value": "medium",
          "label": "t:sections.all.padding.column_gap.medium"
        },
        {
          "value": "large",
          "label": "t:sections.all.padding.column_gap.large"
        }
      ],
      "default": "medium",
      "label": "t:sections.all.padding.column_gap.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.mobile_options.label"
    },
    {
      "type": "checkbox",
      "id": "enable_carousel_mobile",
      "default": false,
      "label": "t:sections.all.carousel.enable_carousel_mobile.label"
    },
    {
      "type": "range",
      "id": "items_per_row_mobile",
      "label": "t:sections.all.items.items_per_row_mobile",
      "min": 1,
      "max": 2,
      "step": 0.5,
      "default": 1
    }
  ],
  "presets": [
    {
      "name": "t:sections.product-bundle.blocks.settings.product_discount.name"
    }
  ]
}
{% endschema %}
