{% liquid
  assign theme_st = settings
  assign block_st = block.settings
  assign scroll_animation = theme_st.scroll_animation
%}
<div
  class="block__subheading subheading_weight heading-color lh-global inline-block mb-custom{% if block_st.spacing_bottom > 10 %} mb_auto-rsp{% endif %}{% if block_st.uppercase %} uppercase{% endif %} fs-{{ block_st.subheading_size }}"
  style="--space-bottom: {{ block_st.spacing_bottom }};"
>
  {%- if scroll_animation -%}
    <motion-effect
      data-animate="fade-in"
      class="block"
    >
  {%- endif -%}
  <div {{ block.shopify_attributes }}>
    {{ block.settings.subheading }}
  </div>
  {%- if scroll_animation -%}
    </motion-effect>
  {%- endif -%}
</div>
{% schema %}
{
  "name": "t:sections.all.content_setting.subheading.label",
  "class": "w-full",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "default": "Subheading text",
      "label": "t:sections.all.content_setting.subheading.label"
    },
    {
      "type": "select",
      "id": "subheading_size",
      "options": [
        {
          "value": "small-1",
          "label": "t:sections.all.content_header.heading_size.options__1.label"
        },
        {
          "value": "",
          "label": "t:sections.all.content_header.heading_size.options__2.label"
        },
        {
          "value": "big-2",
          "label": "t:sections.all.content_header.heading_size.options__3.label"
        }
      ],
      "default": "",
      "label": "t:sections.all.content_header.heading_size.size"
    },
    {
      "type": "checkbox",
      "id": "uppercase",
      "default": false,
      "label": "t:settings_schema.typography.settings.heading.text_transform.uppercase"
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.spacing_bottom",
      "default": 10
    }
  ],
  "presets": [
    { "name": "t:sections.all.content_setting.subheading.label", "category": "t:sections.group.blocks.basic" }
  ]
}
{% endschema %}
