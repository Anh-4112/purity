{% assign block_st = block.settings %}
<div
  class="block__subheading subheading_weight lh-normal inline-block mb-custom{% if block_st.uppercase %} uppercase{% endif %} fs-{{ block_st.subheading_size }} text-color bg-custom{% if block_st.background_color != "rgba(0,0,0,0)" and block_st.background_color != "transparent" and block_st.background_color != blank  %} py-10 px-15 btn-rounded{% endif %}"
  style="--space-bottom: {{ block_st.spacing_bottom }};--color-text: {{ block_st.text_color }};--bg-color-custom: {{ block_st.background_color }};"
  {{ block.shopify_attributes }}
>
  {{ block_st.subheading | escape }}
</div>
{% schema %}
{
  "name": "t:sections.all.content_setting.subheading.label",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "default": "Subheading text",
      "label": "t:sections.all.content_setting.subheading.label"
    },
    {
      "type": "select",
      "id": "subheading_size",
      "options": [
        {
          "value": "small-1",
          "label": "t:sections.all.content_header.heading_size.options__1.label"
        },
        {
          "value": "",
          "label": "t:sections.all.content_header.heading_size.options__2.label"
        },
        {
          "value": "big-2",
          "label": "t:sections.all.content_header.heading_size.options__3.label"
        }
      ],
      "default": "",
      "label": "t:sections.all.content_header.heading_size.size"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "t:sections.image-with-text.settings.background_color",
      "default": "transparent"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "t:sections.image-with-text.settings.text_color",
      "default": "#000000"
    },
    {
      "type": "checkbox",
      "id": "uppercase",
      "default": false,
      "label": "t:settings_schema.typography.settings.heading.text_transform.uppercase"
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.spacing_bottom",
      "default": 10
    }
  ],
  "presets": [{ "name": "t:sections.all.content_setting.subheading.label" }]
}
{% endschema %}
