{% if link.links.size > 0 %}
  {%- if type == 'classic' -%}
    <div
      class="submenu"
    >
      {%- if menu_mobile != blank -%}
        <div class="submenu-header">
          <back-button tabindex="0">
            <svg class="icon-back min-w-custom" width="6" height="11" viewBox="0 0 6 11" fill="none">
              <use href="#icon-back" />
            </svg>
            {{- link.title -}}
          </back-button>
          <close-button tabindex="0">
            <svg width="13" height="14" viewBox="0 0 13 14" fill="none">
              <use href="#icon-close"></use>
            </svg>
          </close-button>
        </div>
      {%- endif -%}
  {%- else -%}
    {%- if menu_mobile != blank -%}
      <div class="submenu-header">
        <back-button tabindex="0">
          <svg class="icon-back min-w-custom" width="6" height="11" viewBox="0 0 6 11" fill="none">
            <use href="#icon-back" />
          </svg>
          {{- link.title -}}
        </back-button>
        <close-button tabindex="0">
          <svg width="13" height="14" viewBox="0 0 13 14" fill="none">
            <use href="#icon-close"></use>
          </svg>
        </close-button>
      </div>
    {%- endif -%}
  {%- endif -%}
  <ul
    class="menu{% if type != 'classic' %} sub-menu-mega{% endif %}"
  >
    {%- if menu_mobile != blank -%}
      <li class="menu-link active">
        <a href="{{ link.url }}">{{ link.title }}</a>
      </li>
    {%- endif -%}
    {% for child_link in link.links %}
      <li class="menu-link{% if child_link.links.size > 0 %} have-child{% endif %}">
        {%- if child_link.links.size > 0 -%}
          {% if menu_mega != blank %}
            <a
              class="menu__item"
              href="{{ link.url }}"
              aria-label="{{ grandchild_link.title }}"
            >
              {{- child_link.title -}}
          {%- else -%}
            <details>
              <summary
                class="menu__item"
                data-href="{{ link.url }}"
                aria-label="{{ child_link.title }}"
              >
                {{- child_link.title -}}
              </summary>
          {% endif %}
          <ul class="sub-children-menu">
            {% for grandchild_link in child_link.links %}
              <li class="menu-link">
                <a
                  class="menu__item"
                  href="{{ grandchild_link.url }}"
                  aria-label="{{ grandchild_link.title }}"
                >
                  {{- grandchild_link.title -}}
                </a>
              </li>
            {% endfor %}
          </ul>
          {% if menu_mega != blank %}
            </a>
          {%- else -%}
            </details>
          {% endif %}

        {%- else -%}
          <a
            class="menu__item"
            aria-label="{{ child_link.title }}"
            href="{{ child_link.url }}"
          >
            {{- child_link.title -}}
          </a>
        {%- endif -%}
      </li>
    {% endfor %}
  </ul>
  {%- if type == 'classic' -%}
    </div>
  {%- endif -%}
{%- else -%}
  {%- if menu_mobile != blank -%}
    <div class="submenu-header">
      <back-button tabindex="0">
        <svg class="icon-back min-w-custom" width="6" height="11" viewBox="0 0 6 11" fill="none">
          <use href="#icon-back" />
        </svg>
        {{- link.title -}}
      </back-button>
      <close-button tabindex="0">
        <svg width="13" height="14" viewBox="0 0 13 14" fill="none">
          <use href="#icon-close"></use>
        </svg>
      </close-button>
    </div>
  {%- endif -%}
{% endif %}
