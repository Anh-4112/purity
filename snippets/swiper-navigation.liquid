{% liquid
  assign class = ''
  if show_on_hover == true
    assign class = 'invisible show-on-hover transition absolute'
  else
    assign class = ''
  endif
%}
<div class="swiper-actions {{ class-slideshow }}">
  <div
    class="swiper-arrow swiper-button-prev overflow-hidden {{ class }}{% if settings.rounded_button > 0 %} rounded-50{% endif %} inline-flex content-center{% if type == "slideshow" %} left-0{% else %} shadow bg-white btn-hover{% endif %}"
    style="--transform-x: 2rem;"
  >
    {% if type != 'slideshow' %}
      <svg width="6" height="11" fill="none">
        <use href="#icon-back" />
      </svg>
    {% endif %}
  </div>
  <div
    class="swiper-arrow swiper-button-next overflow-hidden {{ class }}{% if settings.rounded_button > 0 %} rounded-50{% endif %} inline-flex content-center{% if type == "slideshow" %} right-0{% else %} shadow bg-white btn-hover{% endif %}"
    style="--transform-x: -2rem;"
  >
    {% if type != 'slideshow' %}
      <svg width="6" height="11" fill="none">
        <use href="#icon-next" />
      </svg>
    {% endif %}
  </div>
</div>
