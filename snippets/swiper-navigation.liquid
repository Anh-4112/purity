{% liquid
  assign class = ''
  if show_on_hover == true
    assign class = 'invisible show-on-hover transition absolute'
  else
    assign class = ''
  endif
%}
<div class="swiper-actions">
  <div
    class="swiper-arrow swiper-button-prev overflow-hidden {{ class }}{% if settings.rounded_button > 0 %} rounded-50{% endif %} inline-flex content-center shadow bg-white btn-hover"
    style="--transform-x: 2rem;"
  >
    <svg width="6" height="11" fill="none">
      <use href="#icon-back" />
    </svg>
  </div>
  <div
    class="swiper-arrow swiper-button-next overflow-hidden {{ class }}{% if settings.rounded_button > 0 %} rounded-50{% endif %} inline-flex content-center shadow bg-white btn-hover"
    style="--transform-x: -2rem;"
  >
    <svg width="6" height="11" fill="none">
      <use href="#icon-next" />
    </svg>
  </div>
</div>
