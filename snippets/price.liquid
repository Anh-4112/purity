{%- liquid
  if scope != 'detail'
    assign target = product.variants[0]
  else
    assign target = product.selected_or_first_available_variant
  endif
  assign compare_at_price = target.compare_at_price
  assign price = target.price | default: 1999

  assign money_price = price | money
  if settings.currency_code_enabled
    assign money_price = price | money_with_currency
  endif
  if product.price_varies and scope != 'detail'
    assign money_price = 'products.product.price.from_price_html' | t: price: money_price
  endif
  assign special_class = ''
  if compare_at_price > price
    assign special_class = ' special-price heading-style'
  endif
-%}
<div class="card-product-price relative flex wrap gap-5 align-center{% if theme_st.product_alignment == 'center' %} justify-center{% endif %}">
  {%- if compare_at_price > price -%}
    <div class="heading-color price-regular">
      <span class="visually-hidden visually-hidden--inline">{{ 'products.product.price.sale_price' | t }}</span>
      <span class="price{{ special_class }}">
        {{ money_price }}
      </span>
    </div>
    <div class="price-regular text-color">
      <span class="visually-hidden visually-hidden--inline">
        {{- 'products.product.price.regular_price' | t -}}
      </span>
      <s class="price-item compare-price">
        {%- if settings.currency_code_enabled -%}
          {{ compare_at_price | money_with_currency }}
        {%- else -%}
          {{ compare_at_price | money }}
        {%- endif -%}
      </s>
    </div>
  {%- else -%}
    <div class="price-regular">
      <span class="visually-hidden visually-hidden--inline">
        {{- 'products.product.price.regular_price' | t -}}
      </span>
      <span class="price heading-style">
        {{ money_price }}
      </span>
    </div>
  {%- endif -%}
  {% if target.unit_price_measurement != null %}
    <small class="unit-price caption">
      <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
      <span class="price-item price-item--last">
        <span class="number">
          {%- if settings.currency_code_enabled -%}
            {{- target.unit_price | money_with_currency -}}
          {%- else -%}
            {{- target.unit_price | money -}}
          {%- endif -%}
        </span>
        <span aria-hidden="true">/</span>
        <span class="visually-hidden">&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span>
        <span class="unit">
          {%- if target.unit_price_measurement.reference_value != 1 -%}
            {{- target.unit_price_measurement.reference_value -}}
          {%- endif -%}
          {{ target.unit_price_measurement.reference_unit }}
        </span>
      </span>
    </small>
  {% endif %}
</div>
