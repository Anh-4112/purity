{{ 'section-scrolling-text.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign section_st = section.settings
  if section_st.section_width == 'fix_width'
    assign section_width = 'container'
  elsif section_st.section_width == 'full_width'
    assign section_width = 'full-width'
  else
    assign section_width = 'fluid_container'
  endif
  assign heading_size = section_st.heading_size

  assign header_size = ''
  if heading_size == 'small'
    assign header_size = 'h3'
  elsif heading_size == 'large'
    assign header_size = 'h1'
  endif
-%}
{%- capture style -%}
    --section-pt: {{ section_st.padding_top }};--section-pb: {{ section_st.padding_bottom }};--speed: {{ section_st.speed }}s;
{%- endcapture -%}
{%- capture col_style -%}
  {% if section_st.space_between < 40 %}--gap: {{ section_st.space_between }}px;{% else %}--gap: clamp(4rem, calc({{ section_st.space_between }} * var(--responsive-rate)), calc({{ section_st.space_between }}*1px));{% endif %}
{%- endcapture -%}
{% style %}
  .show-background-blur {
    mask-image: linear-gradient(to right, transparent 0, #000 20%, #000 80%, transparent 100%);
    -webkit-mask-image: linear-gradient(to right, transparent 0, #000 20%, #000 80%, transparent 100%);
  }
{% endstyle %}
<div
  class="section color-{{ section_st.color_scheme }} gradient section"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ section_width }}">
    {%- if section_st.heading != blank or section_st.description != blank or section_st.subheading != blank -%}
      <div class="section-header section-header__in-section d-block text-{{ section_st.text_alignment }}{% if section.blocks.size > 0 %} mb-30 mb-md-40{% endif %}">
        {%- if section_st.subheading != blank -%}
          <div class="section-subheading h7 mb-5 mb-md-10 subheading_weight fs-big-2">
            {{ section_st.subheading }}
          </div>
        {%- endif -%}
        {%- if section_st.title != blank -%}
          <h2 class="block section-heading {{ header_size }}">
            {{ section_st.title }}
          </h2>
        {%- endif -%}
        {%- if section_st.description != blank -%}
          <div class="section-description mt-15">
            {{ section_st.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
    <div
      class="flex{% if section_st.uppercase %} uppercase{% endif %} marquee overflow-hidden gap w-full justify-center {% if section_st.show_background_blur %}show-background-blur{% endif %}"
      style="{{ col_style | strip | strip_newlines }}"
    >
      {%- for i in (0..5) -%}
        <div
          class="flex animation-marquee animation__marquee-{{ section_st.direction }} marquee whitespace-nowrap gap align-center"
          style="{{ col_style | strip | strip_newlines }}"
        >
          {%- for block in section.blocks -%}
            {% assign block_st = block.settings %}

            {%- liquid
              assign image = block_st.image_block
              assign link_image = block_st.link_image
              assign image_alt_default = 'sections.scrolling_text.alt' | t
              assign image_alt = image.alt | default: image_alt_default | escape
            -%}
            <a
              class="scrolling-image-item overflow-hidden w-custom-mb w-custom"
              style="--width: {{ section_st.image_width }}px;"
              {% if link_image == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ link_image | default: "#" }}"
              {% endif %}
              aria-label="{{ 'sections.scrolling_text.alt' | t }}"
            >
              {%- if image != blank -%}
                <div
                  class="scrolling-image image_scroll rounded"
                  style="--image-width: {{ section_st.image_width }}px;--aspect-ratio: {{ image.aspect_ratio }};"
                >
                  {% render 'responsive-image', image: image, type: 'banner', image_alt: image_alt %}
                </div>
              {% else %}
                <div
                  class="w-custom flex content-center"
                  style="--width: {{ section_st.image_width }}px;"
                >
                  {% render 'placeholder-render', type: 'collection', class: 'img-placeholder h-full w-full rounded' %}
                </div>
              {%- endif -%}
            </a>
          {%- endfor -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

