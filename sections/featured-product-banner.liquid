{%- liquid
  assign section_st = section.settings
  if section_st.section_width == 'fix_width'
    assign section_width = 'container'
  elsif section_st.section_width == 'full_width'
    assign section_width = 'full-width px-20'
  else
    assign section_width = 'fluid_container'
  endif

  assign heading_size = section_st.heading_size
  assign header_size = ''
  if heading_size == 'small'
    assign header_size = 'h3'
  elsif heading_size == 'large'
    assign header_size = 'h1'
  endif

  assign image = section_st.image
  assign image_mobile = section_st.image_mobile
  assign image_ratio = section_st.image_ratio

  assign ratio = '3/4'
  assign ratio_mb = '3/4'
  if image_ratio != 'adapt'
    case image_ratio
      when 'square'
        assign ratio = '1/1'
        assign ratio_mb = '1/1'
      when 'landscape'
        assign ratio = '4/3'
        assign ratio_mb = '4/3'
      when 'portrait'
        assign ratio = '3/4'
        assign ratio_mb = '3/4'
    endcase
  else
    if image != blank or image_mobile != blank
      assign ratio = image.aspect_ratio
      assign ratio_mb = image_mobile.aspect_ratio | default: ratio
    endif
  endif
  assign image_alt = image.alt
  if image_alt == blank
    assign image_alt = 'general.image.image_alt_default' | t
  endif
-%}

{%- capture style -%}
    --section-pt: {{ section_st.padding_top }}; --section-pb: {{ section_st.padding_bottom }};
    {% if heading_size == 'large' %}--font-size: 40;{% endif %}
{%- endcapture -%}

{% style %}
  .media-product {
    width: 100%;
    max-width: 40rem;
    margin: 0 auto;
  }
  .media-effect__item:nth-of-type(1) {
    top: 0;
    right: 15%;
  }
  .media-effect__item:nth-of-type(2) {
    top: 50%;
    transform: translateY(-50%);
    left: -5%;
  }
  .media-effect__item:nth-of-type(3) {
    bottom: 0;
    right: -5%;
  }
  .information-text__wrapper{
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    padding-top: 20px;
    z-index: 1;
  }
  .information-text__content{
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    justify-content: space-between;
    height: 100%;
    gap: 32px;
    padding-top: 0;
  }
  .block__information_text {
        width: 40%;
        display: flex;
        align-items: flex-start;
        justify-content: center;
    }
    .media-effect__item{
      width: 10rem;
      height: 10rem;
    }
{% endstyle %}
<div
  class="section section color-{{ section_st.color_scheme }} gradient"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ section_width }}">
    {%- if section_st.heading != blank or section_st.description != blank -%}
      <div class="section-header section-header__in-section text-{{ section_st.text_alignment }}{% if section.blocks.size > 0 %} mb-30 mb-md-40{% endif %}">
        {%- if section_st.heading != blank -%}
          <h2 class="block section-heading {{ header_size }}">
            {{ section_st.heading }}
          </h2>
        {%- endif -%}
        {%- if section_st.description != blank -%}
          <div class="section-description mt-15">
            {{ section_st.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
    <div class="section-content relative">
      <div class="media-product relative">
        <div
          class="media-product__main"
          style="--aspect-ratio: {{ ratio }};{% if image_mobile != blank %}--aspect-ratio-mb: {{ ratio_mb }};{% endif %}"
        >
          {% if image != blank or image_mobile != blank %}
            {% render 'responsive-image',
              type: 'banner',
              container: section_st.section_width,
              image: image,
              image_mobile: image_mobile,
              image_alt: image_alt
            %}
          {% else %}
            {%- render 'placeholder-render', type: 'lifestyle-2' -%}
          {% endif %}
        </div>
        <media-effect>
          {% assign image_effect_blocks = section.blocks | where: "type", "image_effect" %}
          {% for block in image_effect_blocks %}
            <div class="media-effect__item absolute">
              {%- liquid
                assign image = block.settings.image
                assign ratio = '3/4'
                if image_ratio != 'adapt'
                  case image_ratio
                    when 'square'
                      assign ratio = '1/1'
                    when 'landscape'
                      assign ratio = '4/3'
                    when 'portrait'
                      assign ratio = '3/4'
                  endcase
                else
                  if image != blank
                    assign ratio = image.aspect_ratio
                  endif
                endif
                assign image_alt = image.alt
                if image_alt == blank
                  assign image_alt = 'general.image.image_alt_default' | t
                endif
              -%}
              {% case block.type %}
                {% when 'image_effect' %}
                  {% if image != blank %}
                    {% render 'responsive-image',
                      type: 'banner',
                      container: section_st.section_width,
                      image: image,
                      image_alt: image_alt
                    %}
                  {% else %}
                    {%- render 'placeholder-render', type: 'product' -%}
                  {% endif %}
              {% endcase %}
            </div>
          {% endfor %}
        </media-effect>
      </div>
      <div class="information-text__wrapper">
        <div class="information-text__content">
          {% for block in section.blocks %}
            {% assign block_st = block.settings %}
            {% case block.type %}
              {% when 'information' %}
                <div
                  class="block__information_text"
                  {{ block.shopify_attributes }}
                >
                    <div class="subheading_weight lh-normal flex {% if block_st.highlight_text_icon != 'none' %}gap-10{% endif %} {% if block_st.uppercase %} uppercase{% endif %} fs-{{ block_st.highlight_text_size }} text-color bg-custom{% if block_st.background_color != "rgba(0,0,0,0)" and block_st.background_color != "transparent" and block_st.background_color != blank  %} py-10 px-15 btn-rounded{% endif %}" style="--color-text: {{ block_st.text_color }};--bg-color-custom: {{ block_st.background_color }};">
                        {% if block_st.highlight_text_icon != 'none' %}
                            {% render 'icon_svg_list', icon: block_st.highlight_text_icon %}
                          {% endif %}
                          {{ block_st.highlight_text | escape }}
                    </div>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
<script src="{{ 'section-featured-product-banner.js' | asset_url }}" defer="defer"></script>
