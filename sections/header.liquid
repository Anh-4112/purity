      "label": "t:sections.header.settings.menu.label"
    },
    {
      "type": "select",
      "id": "menu_trigger",
      "options": [
        {
          "value": "click",
          "label": "t:sections.header.settings.menu.menu_trigger.options__1.label"
        },
        {
          "value": "hover",
          "label": "t:sections.header.settings.menu.menu_trigger.options__2.label"
