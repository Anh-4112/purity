{%- liquid
  assign theme_st = settings
  assign section_st = section.settings
  assign color_scheme = section_st.color_scheme
  assign menu = section_st.menu
  assign transparent = section_st.transparent_on_desktop
  if section_st.section_width == 'fix_width'
    assign section_width = 'container'
  elsif section_st.section_width == 'full_width'
    assign section_width = 'full-width px-20'
  else
    assign section_width = 'fluid_container'
  endif
  assign transparent_class = ''
  if request.page_type == 'index' and transparent
    assign transparent_class = ' absolute inset-x-0 transparent'
  endif
-%}
<script src="{{ 'localization-form.js' | asset_url }}" defer="defer"></script>
{%- capture style -%}
  --section-pt: {{ section_st.padding_top }};--section-pb: {{ section_st.padding_bottom }};{{- -}}
  {% if transparent %}--transparent-color: {{ section_st.header_text_icon_transparent }};{% endif %}{{- -}}
    --header-grid-template: 'menu logo icon' / minmax(0, 1fr) fit-content(60%) minmax(0,1fr);{{- -}}
  {% if section_st.logo_position == 'center' %}
    @media only screen and (min-width: 1025px) {
      .logo-left{
        --header-grid-template: 'menu logo icon' / minmax(0, 1fr) fit-content(60%) minmax(0,1fr);
      }
    }  
  {% endif %}
  {% if request.page_type == 'index' and transparent %}
    .transparent{
      --color-background: transparent;
      --color-text: {{ section_st.header_text_icon_transparent }};
    }

  {% endif %}
{%- endcapture -%}
<header
  data-sticky-type="{{ section_st.sticky_header_type }}"
  data-sticky-mobile="{{ section_st.sticky_header_mobile }}"
  data-menu-trigger="{{ section_st.menu_trigger }}"
  class="header-wrapper p-min{{ transparent_class }} color-{{ color_scheme }}"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ section_width }}">
    <div class="header__inner grid logo-{{ section_st.logo_position }} align-center">
      <toggle-menu class="mobile-menu-toggle">
        <button
          class="btn-reset btn-toggle hidden-1025 text-start"
          aria-controls="Menu-Drawer"
          aria-label="{{ 'accessibility.toggle_menu' | t }}"
        >
          <svg width="20" height="14" viewBox="0 0 20 14" fill="none">
            <path d="M1.00703 7.99665C0.725995 7.99665 0.483997 7.90285 0.28103 7.71524C0.0936768 7.512 0 7.26968 0 6.98828C0 6.7225 0.0936768 6.49581 0.28103 6.30821C0.483997 6.10497 0.725995 6.00335 1.00703 6.00335H18.993C19.274 6.00335 19.5082 6.10497 19.6956 6.30821C19.8985 6.49581 20 6.7225 20 6.98828C20 7.26968 19.8985 7.512 19.6956 7.71524C19.5082 7.90285 19.274 7.99665 18.993 7.99665H1.00703ZM1.00703 1.9933C0.725995 1.9933 0.483997 1.8995 0.28103 1.71189C0.0936768 1.50865 0 1.26633 0 0.984925C0 0.719151 0.0936768 0.492462 0.28103 0.304858C0.483997 0.101619 0.725995 0 1.00703 0H18.993C19.274 0 19.5082 0.101619 19.6956 0.304858C19.8985 0.492462 20 0.719151 20 0.984925C20 1.26633 19.8985 1.50865 19.6956 1.71189C19.5082 1.8995 19.274 1.9933 18.993 1.9933H1.00703ZM1.00703 14C0.725995 14 0.483997 13.9062 0.28103 13.7186C0.0936768 13.5154 0 13.273 0 12.9916C0 12.7259 0.0936768 12.4992 0.28103 12.3116C0.483997 12.1083 0.725995 12.0067 1.00703 12.0067H18.993C19.274 12.0067 19.5082 12.1083 19.6956 12.3116C19.8985 12.4992 20 12.7259 20 12.9916C20 13.273 19.8985 13.5154 19.6956 13.7186C19.5082 13.9062 19.274 14 18.993 14H1.00703Z" fill="currentColor"></path>
          </svg>
        </button>
      </toggle-menu>
      {%- render 'logo', section_st: section_st -%}
      {%- if menu != blank -%}
        <svg
          aria-hidden="true"
          focusable="false"
          role="presentation"
          class="hidden"
          hidden
        >
          <symbol id="icon-arrow-down">
            <path fill="currentColor" d="M.174.845A.424.424 0 0 1 0 .505C0 .363.058.241.174.14A.587.587 0 0 1 .575 0c.16 0 .295.047.402.14L4 2.793 7.023.14A.587.587 0 0 1 7.425 0c.16 0 .294.047.401.14A.468.468 0 0 1 8 .505a.424.424 0 0 1-.174.34L4.401 3.849A.56.56 0 0 1 4 4a.56.56 0 0 1-.401-.152L.174.845Z"/>
          </symbol>
          <symbol id="icon-back" viewBox="0 0 6 11" fill="none">
            <path d="M4.7193 10.7605C4.85965 10.9202 5.03509 11 5.24561 11C5.45614 11 5.63158 10.9202 5.77193 10.7605C5.92398 10.6131 6 10.435 6 10.2261C6 10.005 5.92398 9.81463 5.77193 9.65494L1.80702 5.49079L5.77193 1.32663C5.92398 1.17923 6 1.00112 6 0.792295C6 0.571189 5.92398 0.380793 5.77193 0.221106C5.63158 0.0737018 5.45614 0 5.24561 0C5.03509 0 4.85965 0.0737018 4.7193 0.221106L0.22807 4.93802C0.0760236 5.09771 0 5.28811 0 5.50921C0 5.71803 0.0760236 5.89615 0.22807 6.04355L4.7193 10.7605Z" fill="currentColor"/>
          </symbol>
          <symbol id="icon-next" viewBox="0 0 6 11" fill="none">
            <path fill="currentColor" d="M1.278 10.721a.688.688 0 0 1-.528.229.688.688 0 0 1-.527-.229.669.669 0 0 1-.229-.51c0-.21.077-.392.229-.544l3.973-3.973L.223 1.721a.669.669 0 0 1-.229-.51c0-.21.077-.392.229-.544C.363.527.539.456.75.456c.211 0 .387.07.528.21l4.5 4.5a.744.744 0 0 1 .228.546c0 .199-.076.369-.228.51l-4.5 4.5Z"/>
          </symbol>
        </svg>
        <nav class="header__menu hidden block-1025">
          <ul class="list-menu list-unstyled flex wrap">
            {%- for link in menu.links -%}
              {%- if section.blocks.size > 0 -%}
                <li>
                  {%- liquid
                    assign last_block = null
                    assign mega_width = 100
                    for block in section.blocks
                      assign block_st = block.settings
                      if block_st.text == link.title
                        assign last_block = block
                      endif
                    endfor
                  -%}
                  {%- if last_block != null -%}
                    {%- assign has_content = false -%}
                    {%- case last_block.type -%}
                      {%- when 'menu_mega' -%}
                        {%- for i in (1..5) -%}
                          {%- capture promotion -%}promotion_image_{{ i }}{%- endcapture -%}
                          {%- liquid
                            if last_block.settings[promotion] != blank
                              assign has_content = true
                            endif
                          -%}
                        {%- endfor -%}
                      {%- when 'menu_product' -%}
                        {%- liquid
                          if last_block.settings.product_list != blank
                            assign has_content = true
                          endif
                        -%}
                      {%- when 'menu_collection' -%}
                        {%- liquid
                          if last_block.settings.collection != blank
                            assign has_content = true
                          endif
                        -%}
                    {%- endcase -%}
                    {%- if link.links.size > 0 or has_content -%}
                      <details is="details-mega-menu" class="details-header-menu">
                        <summary
                          class="menu__item"
                          data-href="{{ link.url }}"
                          aria-label="{{ link.title }}"
                        >
                          {{ link.title }}
                          <svg class="icon icon-down transition-short" width="10" height="6">
                            <use href="#icon-arrow-down" />
                          </svg>
                        </summary>
                        {%- liquid
                          if has_content and link.links.size > 0
                            assign mega_width = last_block.settings.mega_width
                          endif
                        -%}
                        <div
                          class="mega-menu py-30 submenu transition invisible submenu-desktop {{ section_st.dropdowns_animation }} overflow-y-auto absolute inset-x-0 z-1 bg-white shadow"
                          style="--col-mega-width: {{ mega_width }}%"
                        >
                          <div class="container flex wrap gap">
                            {%- if link.links.size > 0 -%}
                              <div
                                class="menu-list flex-1"
                                style="--col-desktop: {{ last_block.settings.menu_column }}"
                              >
                                {%- render 'horizontal-menu', section_st: section_st, menu_mega: true, link: link -%}
                              </div>
                            {%- endif -%}
                            {%- if has_content -%}
                              {%- case last_block.type -%}
                                {%- when 'menu_mega' -%}
                                  <div
                                    class="col-mega mega-banner flex wrap flex-cols gap"
                                    style="{% if last_block.settings.banner_column > 1 %}--col-number: 2{% else %}--col-number: 1;{% endif %};--col-desktop: {{ last_block.settings.banner_column }};"
                                  >
                                    {%- for i in (1..5) -%}
                                      {%- capture promotion -%}promotion_image_{{ i }}{%- endcapture -%}
                                      {%- capture promotion_subheading -%}promotion_subheading_{{ i }}{%- endcapture -%}
                                      {%- capture promotion_heading -%}promotion_heading_{{ i }}{%- endcapture -%}
                                      {%- capture promotion_description -%}promotion_description_{{ i }}{%- endcapture -%}
                                      {%- capture promotion_button_label -%}promotion_button_label_{{ i }}{%- endcapture -%}
                                      {%- capture promotion_button_link -%}promotion_button_link_{{ i }}{%- endcapture -%}
                                      {%- if last_block.settings[promotion] != blank -%}
                                        {%- liquid
                                          assign image = last_block.settings[promotion]
                                          assign subheading = last_block.settings[promotion_subheading]
                                          assign heading = last_block.settings[promotion_heading]
                                          assign description = last_block.settings[promotion_description]
                                          assign button_label = last_block.settings[promotion_button_label]
                                          assign banner_link = last_block.settings[promotion_button_link]
                                          assign banner_default = 'accessibility.promotion_banner'
                                          assign image_alt = image.alt | default: banner_default | escape
                                        -%}
                                        <div class="banner__item">
                                          <a
                                            {% if banner_link != blank %}
                                              href="{{ banner_link }}"
                                            {% else %}
                                              role="link" aria-disabled="true"
                                            {% endif %}
                                            arial-label="{{ image_alt }}"
                                            class="banner__inner{% if last_block.settings.content_position == 'overlay' %} flex relative{% endif %}"
                                            {% if last_block.settings.content_position == 'overlay' %}
                                              style="--aspect-ratio: {{ image.aspect_ratio }};"
                                            {% endif %}
                                          >
                                            <div
                                              class="banner__item-media block{% if last_block.settings.content_position == 'overlay' %} absolute inset-0{% endif %}"
                                              style="--aspect-ratio: {{ image.aspect_ratio }};--point:{{ image.presentation.focal_point }}; {% if last_block.settings.content_position != 'overlay' %}--aspect-ratio: {{ image.aspect_ratio }};{% endif %}"
                                            >
                                              {% render 'responsive-image',
                                                image: image,
                                                type: 'other',
                                                alt: image_alt
                                              %}
                                            </div>
                                            {% if heading != blank
                                              or subheading != blank
                                              or description != blank
                                              or button_label != blank
                                            %}
                                              <div class="banner__item-info w-full{% if last_block.settings.content_position == 'overlay' %} p-30{% else %} mt-20{% endif %} text-{{ last_block.settings.content_alignment }} relative z-1">
                                                {% if subheading != blank %}
                                                  <div class="subheading">
                                                    {{ subheading | escape }}
                                                  </div>
                                                {% endif %}
                                                {% if heading != blank %}
                                                  <h2 class="heading">
                                                    {{ block_st.heading }}
                                                  </h2>
                                                {% endif %}
                                                {% if description != blank %}
                                                  <div class="description">
                                                    {{ description }}
                                                  </div>
                                                {% endif %}
                                                {% if button_label != blank %}
                                                  <button
                                                    class="btn-primary w-full"
                                                    aria-label="{{ button_label }}"
                                                  >
                                                    {{ button_label }}
                                                  </button>
                                                {% endif %}
                                              </div>
                                            {%- endif -%}
                                          </a>
                                        </div>
                                      {%- endif -%}
                                    {%- endfor -%}
                                  </div>
                                {%- when 'menu_product' -%}
                                  <div class="col-mega mega-product">
                                    {%- liquid
                                      assign heading = last_block.settings.heading
                                      assign product_column = last_block.settings.product_column
                                    -%}
                                    {%- if heading != blank -%}
                                      <div class="section-header">
                                        {%- if heading != blank -%}
                                          <h2 class="section-heading">
                                            {{ heading }}
                                          </h2>
                                        {%- endif -%}
                                      </div>
                                    {%- endif -%}
                                    <slide-section
                                      class="swiper"
                                      data-section-id="{{ section.id }}"
                                      data-autoplay="false"
                                      data-effect="slide"
                                      data-loop="false"
                                      data-speed="500"
                                      data-spacing="20"
                                      data-mobile="1"
                                      data-desktop="{{ product_column }}"
                                      data-tablet="{{ product_column }}"
                                    >
                                      {%- render 'swiper-navigation' -%}
                                      <div class="swiper-wrapper">
                                        {%- liquid
                                          for product in last_block.settings.product_list
                                            render 'card-product', card_product: product, section_id: section.id, class: ' swiper-slide', show_video: false, container: section_width, column: product_column, column_mobile: 1, padding: 20, indexFor: forloop.index
                                          endfor
                                        -%}
                                      </div>
                                      <div class="swiper-pagination"></div>
                                    </slide-section>
                                  </div>
                                {%- when 'menu_collection' -%}
                                  <div class="col-mega mega-collection">
                                    {%- liquid
                                      assign heading = last_block.settings.heading
                                      assign collection_column = last_block.settings.collection_column
                                    -%}
                                    {%- if heading != blank -%}
                                      <div class="section-header">
                                        {%- if heading != blank -%}
                                          <h2 class="section-heading">
                                            {{ heading }}
                                          </h2>
                                        {%- endif -%}
                                      </div>
                                    {%- endif -%}
                                    <slide-section
                                      class="swiper"
                                      data-section-id="{{ section.id }}"
                                      data-autoplay="false"
                                      data-effect="slide"
                                      data-loop="false"
                                      data-speed="500"
                                      data-spacing="20"
                                      data-mobile="1"
                                      data-desktop="{{ collection_column }}"
                                      data-tablet="{{ collection_column }}"
                                    >
                                      {%- render 'swiper-navigation' -%}
                                      <div class="swiper-wrapper">
                                        {% for collection in last_block.settings.collection %}
                                          <div class="collection-item swiper-slide">
                                            {% render 'collection-item',
                                              card_collection: collection,
                                              section: section,
                                              container: section_width,
                                              column: collection_column,
                                              column_mobile: 1,
                                              padding: 20
                                            %}
                                          </div>
                                        {% endfor %}
                                      </div>
                                      <div class="swiper-pagination"></div>
                                    </slide-section>
                                  </div>
                              {%- endcase -%}
                            {%- endif -%}
                          </div>
                        </div>
                      </details>
                    {%- else -%}
                      <a
                        class="menu__item no-underline"
                        href="{{ link.url }}"
                        aria-label="{{ link.title }}"
                      >
                        {{- link.title -}}
                      </a>
                    {%- endif -%}
                  {%- else -%}
                    {%- if link.links.size > 0 -%}
                      <details is="details-mega-menu" class="details-header-menu">
                        <summary
                          class="menu__item"
                          data-href="{{ link.url }}"
                          aria-label="{{ link.title }}"
                        >
                          {{ link.title }}
                          <svg class="icon icon-down transition-short" width="10" height="6">
                            <use href="#icon-arrow-down" />
                          </svg>
                        </summary>
                        {%- render 'horizontal-menu',
                          section_st: section_st,
                          link: link,
                          type: 'classic',
                          level1_index: forloop.index
                        -%}
                      </details>
                    {%- else -%}
                      <a
                        class="menu__item no-underline"
                        href="{{ link.url }}"
                        aria-label="{{ link.title }}"
                      >
                        {{- link.title -}}
                      </a>
                    {%- endif -%}
                  {%- endif -%}
                </li>
              {%- else -%}
                <li>
                  {%- if link.links.size > 0 -%}
                    <details is="details-mega-menu" class="details-header-menu">
                      <summary
                        class="menu__item flex align-center gap-5 justify-between"
                        data-href="{{ link.url }}"
                        aria-label="{{ link.title }}"
                      >
                        {{ link.title }}
                        <svg class="icon icon-down transition-short" width="10" height="6">
                          <use href="#icon-arrow-down" />
                        </svg>
                      </summary>
                      {%- render 'horizontal-menu',
                        section_st: section_st,
                        link: link,
                        type: 'classic',
                        level1_index: forloop.index
                      -%}
                    </details>
                  {%- else -%}
                    <a
                      class="menu__item no-underline"
                      href="{{ link.url }}"
                      aria-label="{{ link.title }}"
                    >
                      {{- link.title -}}
                    </a>
                  {%- endif -%}
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        </nav>
      {%- endif -%}
      {%- if section_st.show_account
        or section_st.show_search
        or section_st.show_cart
        or section_st.show_language
        or section_st.show_currency
      -%}
        <div class="header__action flex flex-end align-center">
          {% if section_st.show_language or section_st.show_currency %}
            <div class="desktop-localization-wrapper flex wrap gap-15">
              {% if section_st.show_currency %}
                {%- render 'country-localization', localPosition: 'HeaderCountry' -%}
              {% endif %}
              {% if section_st.show_language %}
                {%- render 'language-localization', localPosition: 'HeaderLanguage' -%}
              {% endif %}
            </div>
          {% endif %}
          {%- if section_st.show_search -%}
            {% # theme-check-disable NestedSnippet %}
            <a
              href="{{ routes.search_url }}"
              class="header__icon wh-40 flex content-center"
              id="search-icon-bubble"
              data-custom-class="{{ section_width }}"
            >
              <span class="tooltip-content visually-hidden rounded-5 fs-small tooltip-bottom">
                {{ 'general.search.search' | t }}
              </span>
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M9.587 17.4245C13.9153 17.4245 17.424 13.9157 17.424 9.58749C17.424 5.25923 13.9153 1.75049 9.587 1.75049C5.25874 1.75049 1.75 5.25923 1.75 9.58749C1.75 13.9157 5.25874 17.4245 9.587 17.4245Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M18.2495 18.2494L16.5996 16.5995" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span class="visually-hidden">{{ 'general.search.search' | t }}</span>
            </a>
            {% # theme-check-enable NestedSnippet %}
          {%- endif -%}
          {%- if section_st.show_account -%}
            <a
              href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
              class="header__icon wh-40 flex content-center"
              aria-label="{{ 'customer.account_fallback' | t }}"
            >
              <svg class="icon-account" width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path stroke="currentColor" stroke-linecap="round" stroke-width="1.5" d="M19 18.4c-.985-1.657-2.322-3.017-3.89-3.96A9.929 9.929 0 0 0 10.009 13a9.923 9.923 0 0 0-5.106 1.42c-1.571.935-2.912 2.29-3.903 3.942"/><circle cx="10" cy="5.6" r="4" stroke="currentColor" stroke-width="1.5"/>
              </svg>
            </a>
          {%- endif -%}
          {%- if section_st.show_cart -%}
            <a
              href="{{ routes.cart_url }}"
              class="header__icon wh-40 flex content-center"
              id="cart-icon-bubble"
            >
              {%- if theme_st.cart_icon == 'shopping_bag' -%}
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M6.23303 1.75H13.76C17.3144 1.75 17.6699 3.44257 17.9103 5.50772L18.8512 13.4916C19.1544 16.1102 18.3598 18.2499 14.7009 18.2499H5.30261C1.63321 18.2499 0.838693 16.1102 1.15232 13.4916L2.0932 5.50772C2.32319 3.44257 2.67862 1.75 6.23303 1.75Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M7 5.68958C7 7.6897 8.67188 8.5 10 8.5C11.3281 8.5 13 7.6897 13 5.68958" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {%- else -%}
                <svg width="21" height="20" viewBox="0 0 21 20" fill="none">
                  <path d="M0.878906 1.75L5.5448 13.6018C5.69245 13.9758 6.05667 14.2219 6.46026 14.2219H17.6525C18.125 14.2219 18.5384 13.8774 18.6172 13.4049L20.1036 4.75232C20.2119 4.15185 19.7492 3.60061 19.1389 3.60061H6.42089" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round"/>
                  <path d="M16.7734 16.75C16.7734 17.5781 16.0263 18.25 15.1055 18.25C14.1846 18.25 13.4375 17.5781 13.4375 16.75" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round"/>
                  <path d="M10.5625 16.75C10.5625 17.5781 9.81539 18.25 8.89453 18.25C7.97367 18.25 7.22656 17.5781 7.22656 16.75" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round"/>
                </svg>
              {%- endif -%}
              <span class="tooltip-content visually-hidden rounded-5 fs-small tooltip-bottom">
                {{ 'templates.cart.minicart' | t }}
              </span>
              <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
              {%- if cart != empty -%}
                <div class="cart-count rounded-50 inline-flex content-center absolute">
                  {%- if cart.item_count < 100 -%}
                    <span>{{ cart.item_count }}</span>
                  {%- else -%}
                    <span aria-hidden="true">~</span>
                  {%- endif -%}
                  <span class="visually-hidden">{{ 'templates.cart.cart_count' | t: count: cart.item_count }}</span>
                </div>
              {%- else -%}
                <div class="cart-count hidden">
                  <span aria-hidden="true">0</span>
                </div>
              {%- endif -%}
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
  <template class="menu-drawer">
    <menu-drawer
      id="Menu-Drawer"
      class="invisible modal drawer drawer-left transition-drawer hidden-1025 fixed z-15 inset-y-0 flex bg-white"
    >
      <modal-overlay class="modal-overlay invisible transition"></modal-overlay>
      <div class="modal-inner relative">
        <button
          class="modal__close btn-reset wh-40 inline-flex content-center absolute top-0 right-0"
          aria-label="Close"
        >
          <svg width="13" height="14" viewBox="0 0 13 14" fill="none">
