{%- liquid
  assign section_st = section.settings
  assign color_scheme = section_st.color_scheme
  assign menu = section_st.menu
  assign transparent = section_st.transparent
  assign dropdowns_animation = section_st.dropdowns_animation
  if section_st.section_width == 'fix_width'
    assign section_width = 'container'
  elsif section_st.section_width == 'full_width'
    assign section_width = 'full-width px-20'
  else
    assign section_width = 'fluid_container'
  endif
  assign transparent_class = ''
  if request.page_type == 'index' and transparent
    assign transparent_class = ' absolute inset-x-0 transparent z-15'
  endif
-%}
{%- capture style -%}
  --section-pt: {{ section_st.padding_top }};--section-pb: {{ section_st.padding_bottom }};--gap: 1rem; --gap-desktop: 2.5rem;{{- -}}
  {% if transparent %}--transparent-color: {{ section_st.header_text_icon_transparent }};{% endif %}{{- -}}
  --header-grid-template: 'menu logo icon' / minmax(4rem, 1fr) minmax(auto, 45%)  minmax(8rem,1fr);{{- -}}
{%- endcapture -%}

{% style %}
    @media only screen and (min-width: 1025px) {
      .logo-left{
        --header-grid-template: 'logo menu icon' / minmax(0, 1fr) fit-content(60%) minmax(0,1fr);
      }
      .logo-center{
        --header-grid-template: 'menu logo icon' / minmax(0, 1fr) minmax(50px, var(--logo-width))  minmax(0,1fr);
      }
    }
  {% if request.page_type == 'index' and transparent %}
    .site-header .transparent{
      background: transparent;
      transition: background 0.3s ease-in-out;
    }
    .transparent-color,.heading-color.transparent-color{
      --color-text: {{ section_st.header_text_icon_transparent }};
      --color-heading: {{ section_st.header_text_icon_transparent }};
      color: var(--color-text);
    }
    @media (min-width: 1025px) {
      .transparent-menu{
        --color-text: {{ section_st.header_text_icon_transparent }};
        --color-heading: {{ section_st.header_text_icon_transparent }};
      }
      .header__action .button-localization{
        color: {{ section_st.header_text_icon_transparent }};
      }
    }
  {% endif %}
    {% if section_st.enable_rounded_style %}
      announcement-bar:after {
      content: '';
      position: absolute;
      left: 0;
      width: 100%;
      top: 100%;
      height: calc(100% + 30px);
      background: inherit;
      z-index: -2;
    }
   .section-announcement-bar + .site-header .section-rounded{
      border-radius: 3rem 3rem 0 0;
    }
  {% endif %}
{% endstyle %}

<header
  is="site-header"
  data-sticky-type="{{ section_st.sticky_header_type }}"
  data-menu-trigger="{{ section_st.menu_trigger }}"
  data-dropdowns-animation="{{ dropdowns_animation }}"
  class="header-wrapper p-min{{ transparent_class }} color-{{ color_scheme }}{% if section_st.enable_rounded_style %} section-rounded{% endif %}{% if request.page_type != 'index' %} border-bottom{% endif %}"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ section_width }}">
    <div class="header__inner grid gap logo-{{ section_st.logo_position }} align-center">
      <toggle-menu class="mobile-menu-toggle hidden-1025">
        <button
          class="btn-reset btn-toggle text-start pointer heading-color transparent-color"
          aria-label="{{ 'accessibility.toggle_menu' | t }}"
        >
          <svg width="22" height="22" fill="none">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M2 3.5h18M2 8.5h9.47M2 13.5h18M2 18.5h9.47"/>
          </svg>
        </button>
      </toggle-menu>
      {%- render 'logo', section_st: section_st -%}
      {%- if menu != blank -%}
        <svg
          aria-hidden="true"
          focusable="false"
          role="presentation"
          class="hidden"
          hidden
        >
          <symbol id="icon-back" viewBox="0 0 6 11" fill="none">
            <path d="M4.7193 10.7605C4.85965 10.9202 5.03509 11 5.24561 11C5.45614 11 5.63158 10.9202 5.77193 10.7605C5.92398 10.6131 6 10.435 6 10.2261C6 10.005 5.92398 9.81463 5.77193 9.65494L1.80702 5.49079L5.77193 1.32663C5.92398 1.17923 6 1.00112 6 0.792295C6 0.571189 5.92398 0.380793 5.77193 0.221106C5.63158 0.0737018 5.45614 0 5.24561 0C5.03509 0 4.85965 0.0737018 4.7193 0.221106L0.22807 4.93802C0.0760236 5.09771 0 5.28811 0 5.50921C0 5.71803 0.0760236 5.89615 0.22807 6.04355L4.7193 10.7605Z" fill="currentColor"/>
          </symbol>
          <symbol id="icon-next" viewBox="0 0 6 11" fill="none">
            <path fill="currentColor" d="M1.278 10.721a.688.688 0 0 1-.528.229.688.688 0 0 1-.527-.229.669.669 0 0 1-.229-.51c0-.21.077-.392.229-.544l3.973-3.973L.223 1.721a.669.669 0 0 1-.229-.51c0-.21.077-.392.229-.544C.363.527.539.456.75.456c.211 0 .387.07.528.21l4.5 4.5a.744.744 0 0 1 .228.546c0 .199-.076.369-.228.51l-4.5 4.5Z"/>
          </symbol>
          <symbol id="icon-cart" viewBox="0 0 22 22" fill="none">
            <path d="M6.85649 1.9248H15.1362C19.046 1.9248 19.437 3.78663 19.7015 6.0583L20.7365 14.8405C21.0699 17.7211 20.196 20.0747 16.1711 20.0747H5.83303C1.79669 20.0747 0.922718 17.7211 1.2677 14.8405L2.30267 6.0583C2.55567 3.78663 2.94664 1.9248 6.85649 1.9248Z" stroke="black" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M7.69922 6.25864C7.69922 8.45876 9.53828 9.3501 10.9992 9.3501C12.4602 9.3501 14.2992 8.45876 14.2992 6.25864" stroke="black" stroke-width="1.8" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
          </symbol>
        </svg>
        <nav class="header__menu hidden block-1025">
          <ul class="list-menu list-unstyled flex wrap">
            {%- for link in menu.links -%}
              {%- if section.blocks.size > 0 -%}
                <li>
                  {%- liquid
                    assign last_block = null
                    assign mega_width = 100
                    for block in section.blocks
                      assign block_st = block.settings
                      if block_st.text == link.title
                        assign last_block = block
                      endif
                    endfor
                  -%}
                  {%- if last_block != null -%}
                    {%- assign has_content = false -%}
                    {%- case last_block.type -%}
                      {%- when 'menu_mega' -%}
                        {%- for i in (1..5) -%}
                          {%- capture promotion -%}promotion_image_{{ i }}{%- endcapture -%}
                          {%- liquid
                            if last_block.settings[promotion] != blank
                              assign has_content = true
                            endif
                          -%}
                        {%- endfor -%}
                      {%- when 'menu_product' -%}
                        {%- liquid
                          if last_block.settings.product_list != blank
                            assign has_content = true
                          endif
                        -%}
                      {%- when 'menu_collection' -%}
                        {%- liquid
                          if last_block.settings.collection != blank
                            assign has_content = true
                          endif
                        -%}
                    {%- endcase -%}
                    {%- if link.links.size > 0 or has_content -%}
                      <details is="details-mega-menu" class="details-header-menu level-1 inline-block animate-motion">
                        <summary
                          class="menu__item outlined-border transparent-menu heading-color{% if settings.menu_uppercase %} uppercase{% endif %} menu_weight flex align-center gap-6 space-between"
                          data-href="{{ link.url }}"
                          aria-label="{{ link.title }}"
                        >
                          {{ link.title }}
                          <svg
                            class="icon icon-down icon-rotate transition-short"
                            width="9"
                            height="6"
                            viewBox="0 0 9 6"
                          >
                            <use href="#icon-arrow-down" />
                          </svg>
                        </summary>
                        {%- liquid
                          if has_content and link.links.size > 0
                            assign mega_width = last_block.settings.mega_width
                          endif
                        -%}
                        <div
                          class="mega-menu submenu z-5 pointer-none transition invisible submenu-desktop overflow-auto {{ dropdowns_animation }} border-top inset-x-0 absolute{% if dropdowns_animation != 'fade-in-down' %} z-2 bg-white{% endif %}"
                          style="--col-mega-width: {{ mega_width }}%; --gap: 20px; --delay: 0.05s;"
                        >
                          <div class="menu-container bg-white py-40 custom-scrollbar overflow-auto">
                            <div class="container flex wrap gap">
                              {%- if link.links.size > 0 -%}
                                <div
                                  class="menu-list flex-1"
                                  style="--col-desktop: {{ last_block.settings.menu_column }}"
                                >
                                  {%- render 'horizontal-menu', section_st: section_st, menu_mega: true, link: link -%}
                                </div>
                              {%- endif -%}
                              {%- if has_content -%}
                                {%- case last_block.type -%}
                                  {%- when 'menu_mega' -%}
                                    <div
                                      class="col-mega mega-banner flex wrap flex-cols"
                                      style="{% if last_block.settings.banner_column > 1 %}--col-number: 2{% else %}--col-number: 1;{% endif %};--col-desktop: {{ last_block.settings.banner_column }};"
                                    >
                                      {%- for i in (1..5) -%}
                                        {%- capture promotion -%}promotion_image_{{ i }}{%- endcapture -%}
                                        {%- capture promotion_subheading -%}promotion_subheading_{{ i }}{%- endcapture -%}
                                        {%- capture promotion_heading -%}promotion_heading_{{ i }}{%- endcapture -%}
                                        {%- capture promotion_description -%}promotion_description_{{ i }}{%- endcapture -%}
                                        {%- capture promotion_button_label -%}promotion_button_label_{{ i }}{%- endcapture -%}
                                        {%- capture promotion_button_link -%}promotion_button_link_{{ i }}{%- endcapture -%}
                                        {%- if last_block.settings[promotion] != blank -%}
                                          {% case i %}
                                            {% when 1 %}
                                              {% assign color_scheme_banner = last_block.settings.color_scheme_banner_1 %}
                                            {% when 2 %}
                                              {% assign color_scheme_banner = last_block.settings.color_scheme_banner_2 %}
                                            {% when 3 %}
                                              {% assign color_scheme_banner = last_block.settings.color_scheme_banner_3 %}
                                            {% when 4 %}
                                              {% assign color_scheme_banner = last_block.settings.color_scheme_banner_4 %}
                                            {% when 5 %}
                                              {% assign color_scheme_banner = last_block.settings.color_scheme_banner_5 %}
                                            {% else %}
                                              {% assign color_scheme_banner = 'default' %}
                                          {% endcase %}
                                          {%- liquid
                                            assign image = last_block.settings[promotion]
                                            assign subheading = last_block.settings[promotion_subheading]
                                            assign heading = last_block.settings[promotion_heading]
                                            assign description = last_block.settings[promotion_description]
                                            assign button_label = last_block.settings[promotion_button_label]
                                            assign banner_link = last_block.settings[promotion_button_link]
                                            assign banner_default = 'accessibility.promotion_banner' | t
                                            assign image_alt = image.alt | default: banner_default | escape
                                          -%}
                                          <div class="banner__item slideIn-animate rounded">
                                            <a
                                              {% if banner_link != blank %}
                                                href="{{ banner_link }}"
                                              {% else %}
                                                role="link" aria-disabled="true"
                                              {% endif %}
                                              arial-label="{{ image_alt }}"
                                              class="banner__inner hover-effect{% if last_block.settings.content_position != 'bellow' %} flex relative align-{{ last_block.settings.content_position }}{% endif %}"
                                              {% if last_block.settings.content_position != 'bellow' %}
                                                style="--aspect-ratio: {{ image.aspect_ratio }};"
                                              {% endif %}
                                            >
                                              <div
                                                class="banner__item-media block rounded hover-effect{% if last_block.settings.content_position != 'bellow' %} absolute inset-0{% endif %}"
                                                style="--aspect-ratio: {{ image.aspect_ratio }};--point:{{ image.presentation.focal_point }};"
                                              >
                                                {% render 'responsive-image',
                                                  image: image,
                                                  type: 'other',
                                                  alt: image_alt
                                                %}
                                              </div>
                                              {% if heading != blank
                                                or subheading != blank
                                                or description != blank
                                                or button_label != blank
                                              %}
                                                <div class="banner__item-info bg-transparent color-{{ color_scheme_banner }} w-full{% if last_block.settings.content_position != 'bellow' %} py-40 px-30{% else %} mt-20{% endif %} text-{{ last_block.settings.content_alignment }} relative z-1">
                                                  {% if subheading != blank %}
                                                    <div class="subheading mb-3">
                                                      {{ subheading | escape }}
                                                    </div>
                                                  {% endif %}
                                                  {% if heading != blank %}
                                                    <h2 class="heading{% if last_block.settings.banner_column > 3 %} h5{% else %} h3{% endif %}">
                                                      {{ heading }}
                                                    </h2>
                                                  {% endif %}
                                                  {% if description != blank %}
                                                    <div class="description mt-5">
                                                      {{ description }}
                                                    </div>
                                                  {% endif %}
                                                  {% if button_label != blank %}
                                                    <button
                                                      class="btn pointer btn-primary mt-20 text-center w-custom"
                                                      style="--width: 70%;--btn-padding-x: 2rem;"
                                                      aria-label="{{ button_label }}"
                                                    >
                                                      <span class="btn-text relative z-1">{{ button_label }}</span>
                                                    </button>
                                                  {% endif %}
                                                </div>
                                              {%- endif -%}
                                            </a>
                                          </div>
                                        {%- endif -%}
                                      {%- endfor -%}
                                    </div>
                                  {%- when 'menu_product' -%}
                                    <div class="col-mega mega-product">
                                      {%- liquid
                                        assign heading = last_block.settings.heading
                                        assign product_column = last_block.settings.product_column
                                      -%}
                                      {%- if heading != blank -%}
                                        <h2 class="section-heading h4 mb-20 slideIn-animate">
                                          {{ heading }}
                                        </h2>
                                      {%- endif -%}
                                      <slide-section
                                        class="swiper hover-action slideIn-animate"
                                        data-section-id="{{ section.id }}"
                                        data-autoplay="false"
                                        data-effect="slide"
                                        data-loop="false"
                                        data-speed="500"
                                        data-spacing="20"
                                        data-mobile="2"
                                        data-desktop="{{ product_column }}"
                                        data-tablet="{{ product_column }}"
                                      >
                                        {%- render 'swiper-navigation', show_on_hover: true -%}
                                        <div class="swiper-wrapper">
                                          {%- liquid
                                            for product in last_block.settings.product_list
                                              render 'card-product', card_product: product, section_id: section.id, class: ' swiper-slide', show_video: false, container: section_width, column: product_column, column_mobile: 1, padding: 20, indexFor: forloop.index
                                            endfor
                                          -%}
                                        </div>
                                      </slide-section>
                                    </div>
                                  {%- when 'menu_collection' -%}
                                    <div class="col-mega mega-collection">
                                      {%- liquid
                                        assign heading = last_block.settings.heading
                                        assign collection_column = last_block.settings.collection_column
                                      -%}
                                      {%- if heading != blank -%}
                                        <h2 class="section-heading h4 mb-20 slideIn-animate">
                                          {{ heading }}
                                        </h2>
                                      {%- endif -%}
                                      <slide-section
                                        class="swiper hover-action slideIn-animate"
                                        data-section-id="{{ section.id }}"
                                        data-autoplay="false"
                                        data-effect="slide"
                                        data-loop="false"
                                        data-speed="500"
                                        data-spacing="20"
                                        data-mobile="2"
                                        data-desktop="{{ collection_column }}"
                                        data-tablet="{{ collection_column }}"
                                      >
                                        {%- render 'swiper-navigation', show_on_hover: true -%}
                                        <div class="swiper-wrapper">
                                          {% for collection in last_block.settings.collection %}
                                            <div class="collection-item swiper-slide">
                                              {% render 'collection-item',
                                                card_collection: collection,
                                                section: section,
                                                container: section_width,
                                                column: collection_column,
                                                column_mobile: 1,
                                                padding: 20
                                              %}
                                            </div>
                                          {% endfor %}
                                        </div>
                                      </slide-section>
                                    </div>
                                {%- endcase -%}
                              {%- endif -%}
                            </div>
                          </div>
                        </div>
                      </details>
                    {%- else -%}
                      <a
                        class="menu__item level-1 transparent-menu heading-color inline-block{% if settings.menu_uppercase %} uppercase{% endif %} menu_weight no-underline"
                        href="{{ link.url }}"
                        aria-label="{{ link.title }}"
                      >
                        <span class="outlined-border block">{{- link.title -}}</span>
                      </a>
                    {%- endif -%}
                  {%- else -%}
                    {%- if link.links.size > 0 -%}
                      <details is="details-mega-menu" class="details-header-menu level-1 inline-block animate-motion">
                        <summary
                          class="menu__item outlined-border transparent-menu heading-color{% if settings.menu_uppercase %} uppercase{% endif %} menu_weight flex align-center gap-6 space-between"
                          data-href="{{ link.url }}"
                          aria-label="{{ link.title }}"
                        >
                          {{ link.title }}
                          <svg
                            class="icon icon-down icon-rotate transition-short"
                            width="9"
                            height="6"
                            viewBox="0 0 9 6"
                          >
                            <use href="#icon-arrow-down" />
                          </svg>
                        </summary>
                        {%- render 'horizontal-menu',
                          section_st: section_st,
                          link: link,
                          type: 'classic',
                          level1_index: forloop.index
                        -%}
                      </details>
                    {%- else -%}
                      <a
                        class="menu__item level-1 transparent-menu heading-color inline-block{% if settings.menu_uppercase %} uppercase{% endif %} menu_weight no-underline"
                        href="{{ link.url }}"
                        aria-label="{{ link.title }}"
                      >
                        <span class="outlined-border block">{{- link.title -}}</span>
                      </a>
                    {%- endif -%}
                  {%- endif -%}
                </li>
              {%- else -%}
                <li>
                  {%- if link.links.size > 0 -%}
                    <details is="details-mega-menu" class="details-header-menu level-1 inline-block animate-motion">
                      <summary
                        class="menu__item outlined-border transparent-menu heading-color{% if settings.menu_uppercase %} uppercase{% endif %} menu_weight flex align-center gap-6 space-between"
                        data-href="{{ link.url }}"
                        aria-label="{{ link.title }}"
                      >
                        {{ link.title }}
                        <svg
                          class="icon icon-down icon-rotate transition-short"
                          width="9"
                          height="6"
                          viewBox="0 0 9 6"
                        >
                          <use href="#icon-arrow-down" />
                        </svg>
                      </summary>
                      {%- render 'horizontal-menu',
                        section_st: section_st,
                        link: link,
                        type: 'classic',
                        level1_index: forloop.index
                      -%}
                    </details>
                  {%- else -%}
                    <a
                      class="menu__item level-1 transparent-menu heading-color inline-block{% if settings.menu_uppercase %} uppercase{% endif %} menu_weight no-underline"
                      href="{{ link.url }}"
                      aria-label="{{ link.title }}"
                    >
                      <span class="outlined-border block">{{- link.title -}}</span>
                    </a>
                  {%- endif -%}
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        </nav>
      {%- endif -%}
      {%- if section_st.show_account or section_st.show_search or section_st.show_cart -%}
        <div class="header__action flex wrap flex-end align-center gap-20">
          {%- if section_st.show_search or section_st.show_account or section_st.show_cart -%}
            <div class="flex gap" style="--gap: 7px;--gap-desktop: 7px;">
              {%- if section_st.show_search -%}
                <a
                  href="{{ routes.search_url }}"
                  class="header__icon heading-color transparent-color wh-40 flex content-center"
                  id="search-icon-bubble"
                  aria-label="{{ 'general.search.name' | t }}"
                >
                  <svg width="22" height="22" fill="none">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M10.546 19.167a8.62 8.62 0 1 0 0-17.241 8.62 8.62 0 0 0 0 17.241ZM20.073 20.074l-1.815-1.815"/>
                  </svg>
                  <span class="visually-hidden">{{ 'general.search.search' | t }}</span>
                </a>
              {%- endif -%}
              {%- if section_st.show_account -%}
                <a
                  href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
                  class="header__icon heading-color transparent-color wh-40 hidden flex-1025 content-center"
                  aria-label="{{ 'customer.account_fallback' | t }}"
                >
                  <svg width="22" height="22" viewBox="0 0 22 22" fill="none">
                    <path d="M20.7234 20.0751C19.6588 18.2845 18.2153 16.8151 16.5209 15.7975C14.8265 14.7798 12.9335 14.2452 11.0099 14.2412C9.08637 14.2372 7.19164 14.7639 5.49382 15.7744C3.79601 16.785 2.29912 18.2968 1.22855 20.083" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                    <circle cx="10.9992" cy="6.24623" r="4.32143" stroke="currentColor" stroke-width="1.8"/>
                  </svg>
                </a>
              {%- endif -%}
              {%- if section_st.show_cart -%}
                <a
                  href="{{ routes.cart_url }}"
                  class="header__icon heading-color transparent-color wh-40 flex content-center relative"
                  id="cart-icon-bubble"
                  aria-label="{{ 'templates.cart.cart' | t }}"
                >
                  <svg width="22" height="22" viewBox="0 0 22 22" fill="none">
                    <use href="#icon-cart" />
                  </svg>
                  <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
                  {%- if cart != empty -%}
                    <div class="cart-count rounded-50 inline-flex content-center absolute bg-sale fs-10">
                      {%- if cart.item_count < 100 -%}
                        <span class="count">{{ cart.item_count }}</span>
                      {%- else -%}
                        <span aria-hidden="true">~</span>
                      {%- endif -%}
                      <span class="visually-hidden">{{ 'templates.cart.cart_count' | t: count: cart.item_count }}</span>
                    </div>
                  {%- else -%}
                    <div class="cart-count hidden">
                      <span aria-hidden="true">0</span>
                    </div>
                  {%- endif -%}
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
  <template class="menu-drawer">
    <menu-drawer
      id="Menu-Drawer"
      class="modal pointer-none block active-modal-js"
      style="--modal-width: 100%;"
    >
      <modal-overlay class="modal-overlay invisible transition-drawer pointer"></modal-overlay>
      <div class="modal-inner invisible draw-mb drawer-left drawer-left-mb inset-y-0 color-default transition-drawer w-full fixed z-15 left-0 bg-white overflow-hidden">
        <div class="drawer__body h-full">
          <div class="drawer__content flex column h-full max-height-mb-menu">
            <nav class="header__menu-mobile overflow-y-auto overflow-x-hidden w-full h-full grow-1">
              {%- if section_st.banner_image != blank -%}
                <div class="banner overflow-hidden relative">
                  <button
                    class="modal__close transition-short heading-color absolute{% if section_st.banner_image != blank %} top-10 right-10 bg-white blur rounded-50 shadow{% else %} invisible inset-x-0 mx-auto bg-white{% endif %} w-50 h-50 btn-reset rounded-50 inline-flex content-center pointer"
                    style="--width: 2.4rem;"
                    is="button-close-model"
                    aria-label="{{ 'accessibility.button.close' | t }}"
                  >
                    <svg width="12" height="12" viewBox="0 0 12 12" fill="none">
                      <use href="#icon-close" />
                    </svg>
                  </button>
                  {%- assign banner_default = 'accessibility.promotion_banner' | t -%}
                  {%- assign image_alt = section_st.banner_image.alt | default: banner_default | escape -%}
                  <a
                    {% if section_st.banner_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      aria-label="{{ banner_default }}" href="{{ section_st.banner_link }}"
                    {% endif %}
                    class="header-banner flex align-center"
                  >
                    {% render 'responsive-image',
                      image: section_st.banner_image,
                      type: 'other',
                      image_alt: image_alt,
                      disable_lazy_loading: true
                    %}
                  </a>
                </div>
              {% else %}
                <button
                  class="modal__close transition-short heading-color{% if section_st.banner_image != blank %} absolute top-10 right-10 bg-white blur rounded-50 shadow w-50 h-50 inline-flex content-center {% else %} bg-white align-center border-bottom px-gutter-x py-20 w-full gap-10 mb-5{% endif %} btn-reset inline-flex pointer"
                  style="--width: 2.4rem;"
                  is="button-close-model"
                  aria-label="{{ 'accessibility.button.close' | t }}"
                >
                  <span class="flex-1 text-start h7">{{ 'accessibility.menu' | t }}</span>
                  <svg width="12" height="12" viewBox="0 0 12 12" fill="none">
                    <use href="#icon-close" />
                  </svg>
                </button>
              {%- endif -%}
              <ul class="list-unstyled px-gutter-x py-10 overflow-y-auto">
                {%- for link in menu.links -%}
                  {%- if section.blocks.size > 0 -%}
                    <li class="py-10">
                      {%- liquid
                        assign last_block = null
                        assign mega_width = 100
                        for block in section.blocks
                          assign block_st = block.settings
                          if block_st.text == link.title
                            assign last_block = block
                          endif
                        endfor
                      -%}
                      {%- if last_block != null -%}
                        {%- assign has_content = false -%}
                        {%- case last_block.type -%}
                          {%- when 'menu_mega' -%}
                            {%- for i in (1..5) -%}
                              {%- capture promotion -%}promotion_image_{{ i }}{%- endcapture -%}
                              {%- liquid
                                if last_block.settings[promotion] != blank
                                  assign has_content = true
                                endif
                              -%}
                            {%- endfor -%}
                          {%- when 'menu_product' -%}
                            {%- liquid
                              if last_block.settings.product_list != blank
                                assign has_content = true
                              endif
                            -%}
                          {%- when 'menu_collection' -%}
                            {%- liquid
                              if last_block.settings.collection != blank
                                assign has_content = true
                              endif
                            -%}
                        {%- endcase -%}
                        {%- if link.links.size > 0 or has_content -%}
                          <details
                            is="details-mega-menu"
                            class="details-header-menu level-1"
                          >
                            <summary
                              class="menu__item outlined-border transparent-menu heading-color{% if settings.menu_uppercase %} uppercase{% endif %} menu_weight flex align-center gap-6 space-between"
                              data-href="{{ link.url }}"
                              aria-label="{{ link.title }}"
                            >
                              {{ link.title }}
                              {% if settings.rtl %}
                                <svg class="icon-down block hidden-1025 w-6" width="6" height="11">
                                  <use href="#icon-back" />
                                </svg>
                              {% else %}
                                <svg class="icon-down block hidden-1025 w-6" width="6" height="11">
                                  <use href="#icon-next" />
                                </svg>
                              {% endif %}
                            </summary>
                            <div class="submenu pointer-none absolute inset-0 z-2 bg-white flex column transition sub-mb absolute inset-0 drawer drawer-right-mb overflow-hidden">
                              <div class="overflow-y-auto overflow-x-hidden custom-scrollbar pb-20">
                                {%- render 'horizontal-menu', section_st: section_st, menu_mobile: true, link: link -%}
                                {%- if has_content -%}
                                  {%- case last_block.type -%}
                                    {%- when 'menu_mega' -%}
                                      {%- liquid
                                        assign count = 0
                                        for item in last_block.settings.collection
                                          assign count = count | plus: 1
                                        endfor
                                      -%}
                                      <div
                                        class="mega-banner flex wrap flex-cols gap-10 row-gap-20 p-gutter-x"
                                        style="{% if last_block.settings.banner_column > 1 %}--col-number: 2{% else %}--col-number: 1;{% endif %};--col-tablet: 2;"
                                      >
                                        {%- for i in (1..5) -%}
                                          {%- capture promotion -%}promotion_image_{{ i }}{%- endcapture -%}
                                          {%- capture promotion_subheading -%}promotion_subheading_{{ i }}{%- endcapture -%}
                                          {%- capture promotion_heading -%}promotion_heading_{{ i }}{%- endcapture -%}
                                          {%- capture promotion_description -%}promotion_description_{{ i }}{%- endcapture -%}
                                          {%- capture promotion_button_label -%}promotion_button_label_{{ i }}{%- endcapture -%}
                                          {%- capture promotion_button_link -%}promotion_button_link_{{ i }}{%- endcapture -%}
                                          {%- if last_block.settings[promotion] != blank -%}
                                            {%- liquid
                                              assign image = last_block.settings[promotion]
                                              assign subheading = last_block.settings[promotion_subheading]
                                              assign heading = last_block.settings[promotion_heading]
                                              assign description = last_block.settings[promotion_description]
                                              assign button_label = last_block.settings[promotion_button_label]
                                              assign banner_link = last_block.settings[promotion_button_link]
                                              assign banner_default = 'accessibility.promotion_banner' | t
                                              assign banner_alt = image.alt | default: banner_default | escape
                                            -%}
                                            <div class="banner__item">
                                              <div
                                                class="banner__inner{% if last_block.settings.content_position != 'bellow' %} flex relative flex align-{{ last_block.settings.content_position }}{% endif %}"
                                                {% if last_block.settings.content_position != 'bellow' %}
                                                  style="--aspect-ratio: {{ image.aspect_ratio }};"
                                                {% endif %}
                                              >
                                                <a
                                                  {% if banner_link != blank %}
                                                    href="{{ banner_link }}"
                                                  {% else %}
                                                    role="link" aria-disabled="true"
                                                  {% endif %}
                                                  arial-label="{{ image_alt }}"
                                                  class="banner__inner{% if last_block.settings.content_position != 'bellow' %}{% endif %}"
                                                  {% if last_block.settings.content_position != 'bellow' %}
                                                    style="--aspect-ratio: {{ image.aspect_ratio }};"
                                                  {% endif %}
                                                >
                                                  <div
                                                    class="banner__item-media rounded{% if last_block.settings.content_position != 'bellow' %} absolute inset-0{% endif %}"
                                                    style="--point:{{ image.presentation.focal_point }}; {% if last_block.settings.content_position != 'overlay' %}--aspect-ratio: {{ image.aspect_ratio }};{% endif %}"
                                                  >
                                                    {% render 'responsive-image',
                                                      image: image,
                                                      type: 'other',
                                                      image_alt: banner_alt
                                                    %}
                                                  </div>
                                                </a>
                                                {% if heading != blank
                                                  or subheading != blank
                                                  or description != blank
                                                  or button_label != blank
                                                %}
                                                  <div class="banner__item-info color-{{ last_block.settings.color_scheme }} w-full{% if last_block.settings.content_position != 'bellow' %} py-30 px-gutter-x absolute{% else %} relative mt-15{% endif %} text-{{ last_block.settings.content_alignment }} z-1">
                                                    {% if subheading != blank %}
                                                      <div class="subheading fs-18">
                                                        {{ subheading | escape }}
                                                      </div>
                                                    {% endif %}
                                                    {% if heading != blank %}
                                                      <h6 class="heading">
                                                        {{ heading }}
                                                      </h6>
                                                    {% endif %}
                                                    {% if description != blank %}
                                                      <div class="description">
                                                        {{ description }}
                                                      </div>
                                                    {% endif %}
                                                    {% if button_label != blank %}
                                                      <div class="button">
                                                        <a
                                                          class="btn pointer btn-primary inline-block text-center mt-20"
                                                          {% if banner_link == blank %}
                                                            role="link" aria-disabled="true"
                                                          {% else %}
                                                            href="{{ banner_link | default: "#" }}"
                                                          {% endif %}
                                                          aria-label="{{ button_label }}"
                                                        >
                                                          {{ button_label }}
                                                        </a>
                                                      </div>
                                                    {% endif %}
                                                  </div>
                                                {%- endif -%}
                                              </div>
                                            </div>
                                          {%- endif -%}
                                        {%- endfor -%}
                                      </div>
                                    {%- when 'menu_product' -%}
                                      <div class="col-mega mega-product px-gutter-x py-12">
                                        {%- liquid
                                          assign heading = last_block.settings.heading
                                          assign product_column = last_block.settings.product_column
                                          assign count = 0
                                          for item in last_block.settings.product_list
                                            assign count = count | plus: 1
                                          endfor
                                        -%}
                                        {%- if heading != blank -%}
                                          <h4 class="section-heading mb-20">
                                            {{ heading }}
                                          </h4>
                                        {%- endif -%}
                                        <div
                                          class="flex wrap flex-cols gap-10 row-gap-20"
                                          style="{% if count > 1 %}--col-number: 2{% else %}--col-number: 1;{% endif %};--col-tablet: 2;"
                                        >
                                          {%- liquid
                                            for product in last_block.settings.product_list
                                              render 'card-product', card_product: product, section_id: section.id, show_video: false, container: section_width, column: product_column, column_mobile: 1, padding: 20, indexFor: forloop.index
                                            endfor
                                          -%}
                                        </div>
                                      </div>
                                    {%- when 'menu_collection' -%}
                                      <div class="col-mega mega-collection px-gutter-x py-12">
                                        {%- liquid
                                          assign heading = last_block.settings.heading
                                          assign collection_column = last_block.settings.collection_column
                                          assign count = 0
                                          for item in last_block.settings.collection
                                            assign count = count | plus: 1
                                          endfor
                                        -%}
                                        {%- if heading != blank -%}
                                          <h4 class="section-heading mb-20">
                                            {{ heading }}
                                          </h4>
                                        {%- endif -%}
                                        <div
                                          class="flex wrap flex-cols gap-10 row-gap-20"
                                          style="{% if count > 1 %}--col-number: 2{% else %}--col-number: 1;{% endif %};--col-tablet: 2;"
                                        >
                                          {% for collection in last_block.settings.collection %}
                                            {% render 'collection-item',
                                              card_collection: collection,
                                              section: section,
                                              container: section_width,
                                              column: collection_column,
                                              column_mobile: 1,
                                              padding: 20
                                            %}
                                          {% endfor %}
                                        </div>
                                      </div>
                                  {%- endcase -%}
                                {%- endif -%}
                              </div>
                            </div>
                          </details>
                        {%- else -%}
                          <a
                            class="menu__item no-underline py-10 fs-18{% if settings.menu_uppercase %} uppercase{% endif %} menu_weight"
                            href="{{ link.url }}"
                            aria-label="{{ link.title }}"
                          >
                            {{- link.title -}}
                          </a>
                        {%- endif -%}
                      {%- else -%}
                        {%- if link.links.size > 0 -%}
                          <details is="details-mega-menu" class="details-header-menu inline-flex w-full animate-motion">
                            <summary
                              class="menu__item level-1 transparent-menu heading-color{% if settings.menu_uppercase %} uppercase{% endif %} menu_weight flex w-full align-center gap-5 space-between"
                              data-href="{{ link.url }}"
                              aria-label="{{ link.title }}"
                            >
                              {{ link.title }}
                              {% if settings.rtl %}
                                <svg class="icon-down block hidden-1025 w-6" width="6" height="11">
                                  <use href="#icon-back" />
                                </svg>
                              {% else %}
                                <svg class="icon-down block hidden-1025 w-6" width="6" height="11">
                                  <use href="#icon-next" />
                                </svg>
                              {% endif %}
                            </summary>
                            {%- render 'horizontal-menu',
                              section_st: section_st,
                              menu_mobile: true,
                              link: link,
                              type: 'classic',
                              level1_index: forloop.index
                            -%}
                          </details>
                        {%- else -%}
                          <a
                            class="menu__item level-1 transparent-menu heading-color  inline-block{% if settings.menu_uppercase %} uppercase{% endif %} menu_weight"
                            href="{{ link.url }}"
                            aria-label="{{ link.title }}"
                          >
                            <span class="outlined-border block">{{- link.title -}}</span>
                          </a>
                        {%- endif -%}
                      {%- endif -%}
                    </li>
                  {%- else -%}
                    <li class="py-10">
                      {%- if link.links.size > 0 -%}
                        <details is="details-mega-menu" class="details-header-menu level-1">
                          <summary
                            class="menu__item outlined-border transparent-menu heading-color{% if settings.menu_uppercase %} uppercase{% endif %} menu_weight flex align-center gap-6 space-between"
                            data-href="{{ link.url }}"
                            aria-label="{{ link.title }}"
                          >
                            {{ link.title }}
                            {% if settings.rtl %}
                              <svg class="icon-down block hidden-1025 w-6" width="6" height="11">
                                <use href="#icon-back" />
                              </svg>
                            {% else %}
                              <svg class="icon-down block hidden-1025 w-6" width="6" height="11">
                                <use href="#icon-next" />
                              </svg>
                            {% endif %}
                          </summary>
                          {%- render 'horizontal-menu',
                            section_st: section_st,
                            menu_mobile: true,
                            link: link,
                            type: 'classic',
                            level1_index: forloop.index
                          -%}
                        </details>
                      {%- else -%}
                        <a
                          class="menu__item no-underline{% if settings.menu_uppercase %} uppercase{% endif %} menu_weight"
                          href="{{ link.url }}"
                          aria-label="{{ link.title }}"
                        >
                          <span class="outlined-border block">{{- link.title -}}</span>
                        </a>
                      {%- endif -%}
                    </li>
                  {%- endif -%}
                {%- endfor -%}
              </ul>
            </nav>
            {%- if section_st.show_account -%}
              <div class="disclosure__footer bg-white p-gutter-x border-top">
                <div class="align-center justify-content-end flex gap-10 space-between">
                  {%- if section_st.show_account -%}
                    <a
                      href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
                      class="btn pointer btn-primary w-50-percent text-center text-size x-min-value py-15"
                      style="--padding-inline: 8px;"
                      aria-label="{% if customer %}{{ 'customer.account.title' | t }}{% else %}{{ 'customer.login_page.title' | t }}{% endif %}"
                    >
                      {% if customer %}
                        {{ 'customer.account.title' | t }}
                      {% else %}
                        {{ 'customer.login_page.title' | t }}
                      {% endif %}
                    </a>
                    {%- if customer -%}
                      <a
                        href="{{ routes.account_logout_url }}"
                        class="btn pointer btn-outline block text-center text-size w-50-percent x-min-value py-15"
                        style="--padding-inline: 8px;"
                        aria-label="{{ 'customer.account_fallback' | t }}"
                      >
                        {{- 'customer.log_out' | t -}}
                      </a>
                    {%- else -%}
                      <a
                        href="{%- if customer -%}{{ routes.account_logout_url }}{%- else -%}{{ routes.account_register_url }}{%- endif -%}"
                        class="heading-style btn pointer btn-outline text-center text-size w-50-percent x-min-value py-15"
                        style="--padding-inline: 8px;"
                        aria-label="{{ 'customer.account_fallback' | t }}"
                      >
                        {{- 'customer.register.title' | t -}}
                      </a>
                    {%- endif -%}
                  {%- endif -%}
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </menu-drawer>
  </template>
</header>
{% schema %}
{
  "name": "t:sections.header.name",
