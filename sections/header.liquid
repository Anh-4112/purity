            },
            {
              "group": "Overlay image",
              "value": "start",
              "label": "t:sections.all.content_position.options__1.top"
            },
            {
              "group": "Overlay image",
              "value": "center",
              "label": "t:sections.all.content_position.options__1.middle"
            },
            {
              "group": "Overlay image",
              "value": "end",
              "label": "t:sections.all.content_position.options__1.bottom"
            }
          ],
          "default": "end",
          "label": "t:sections.all.content_position.label"
        },
        {
          "type": "select",
          "id": "content_alignment",
          "options": [
            {
              "value": "left",
              "label": "t:sections.all.text_alignment.options__1.label"
            },
            {
              "value": "center",
              "label": "t:sections.all.text_alignment.options__2.label"
            },
            {
              "value": "right",
              "label": "t:sections.all.text_alignment.options__3.label"
            }
          ],
          "default": "left",
          "label": "t:sections.all.text_alignment.label"
        },
