        },
        {
          "value": "fade-in-down",
          "label": "t:sections.header.settings.menu.dropdowns_animation.options__2.label"
        },
        {
          "value": "down-to-up",
          "label": "t:sections.header.settings.menu.dropdowns_animation.options__3.label"
        }
      ],
      "default": "down-to-up",
      "label": "t:sections.header.settings.menu.dropdowns_animation.label"
    },
    {
      "type": "header",
      "content": "t:sections.header.settings.menu_mobile.label"
    },
