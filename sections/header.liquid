    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 10
    }
  ],
  "blocks": [
    {
      "type": "menu_mega",
      "name": "t:sections.header.settings.blocks.mega_menu.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "t:sections.header.settings.blocks.menu_item.label",
          "info": "t:sections.header.settings.blocks.menu_item.info"
        },
        {
          "type": "range",
          "id": "menu_column",
          "min": 2,
          "max": 5,
          "step": 1,
          "label": "t:sections.header.settings.blocks.menu_column.label",
          "default": 4
        },
        {
          "type": "header",
          "content": "t:sections.header.settings.blocks.mega_menu.banners.label"
        },
        {
          "type": "range",
          "id": "mega_width",
          "min": 30,
          "max": 100,
          "unit": "%",
