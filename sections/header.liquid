      "type": "checkbox",
      "id": "show_search",
      "default": true,
      "label": "t:sections.header.settings.addons.show_search.label"
    },
    {
      "type": "checkbox",
      "id": "show_account",
      "default": true,
      "label": "t:sections.header.settings.addons.show_account.label"
    },
    {
      "type": "checkbox",
      "id": "show_cart",
      "default": true,
      "label": "t:sections.header.settings.addons.show_cart.label"
    },
    {
      "type": "checkbox",
      "id": "show_currency",
      "default": true,
      "label": "t:sections.header.settings.addons.show_currency.label"
    },
    {
      "type": "checkbox",
      "id": "show_language",
      "default": false,
      "label": "t:sections.header.settings.addons.show_language.label"
