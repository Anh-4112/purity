        },
        {
          "value": "hover",
          "label": "t:sections.header.settings.menu.menu_trigger.options__2.label"
        }
      ],
      "default": "click",
      "label": "t:sections.header.settings.menu.menu_trigger.label"
    },
    {
      "type": "select",
      "id": "dropdowns_animation",
      "options": [
        {
          "value": "fade-in",
          "label": "t:sections.header.settings.menu.dropdowns_animation.options__1.label"
        },
        {
          "value": "fade-in-down",
          "label": "t:sections.header.settings.menu.dropdowns_animation.options__2.label"
        },
        {
          "value": "down-to-up",
          "label": "t:sections.header.settings.menu.dropdowns_animation.options__3.label"
        }
      ],
      "default": "down-to-up",
      "label": "t:sections.header.settings.menu.dropdowns_animation.label"
    },
    {
      "type": "header",
      "content": "t:sections.header.settings.menu_mobile.label"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "t:sections.header.settings.menu_mobile.banner_image.label"
    },
