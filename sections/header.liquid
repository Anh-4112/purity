      "label": "t:sections.header.settings.addons.show_account.label"
    },
    {
      "type": "checkbox",
      "id": "show_cart",
      "default": true,
      "label": "t:sections.header.settings.addons.show_cart.label"
    },
    {
      "type": "header",
      "content": "t:sections.header.settings.transparent.content",
      "info": "t:sections.header.settings.transparent.info"
    },
    {
      "type": "checkbox",
      "id": "transparent",
      "default": false,
      "label": "t:sections.header.settings.transparent.transparent.label"
    },
    {
      "type": "color",
      "id": "header_text_icon_transparent",
      "label": "t:sections.header.settings.transparent.text_icon_transparent.label",
