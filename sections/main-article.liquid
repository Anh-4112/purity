{% schema %}
{
  "name": "t:sections.main-article.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.general"
    },
    {
      "type": "select",
      "id": "section_width",
      "options": [
        {
          "value": "fix_width",
          "label": "t:sections.all.layout.fix_width"
        },
        {
          "value": "stretch_width",
          "label": "t:sections.all.layout.stretch_width"
        },
        {
          "value": "full_width",
          "label": "t:sections.all.layout.full_width"
        }
      ],
      "default": "fix_width",
      "label": "t:sections.all.layout.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.info",
      "default": "default-color-scheme"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 48
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.all.content_setting.heading.label",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "show_date",
          "label": "t:sections.main-article.settings.show_date",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "show_category",
          "default": true,
          "label": "t:sections.all.blog_setting.show_category"
        },
        {
          "type": "checkbox",
          "id": "show_author",
          "default": true,
          "label": "t:sections.all.blog_setting.show_author"
        },
        {
          "type": "checkbox",
          "id": "show_comment",
          "label": "t:sections.main-article.settings.show_comment",
          "default": true
        }
      ]
    },
    {
      "type": "featured_image",
      "name": "t:sections.main-article.settings.blocks.featured_image",
      "limit": 1,
      "settings": [
        {
          "type": "select",
          "id": "image_height",
          "options": [
            {
              "value": "adapt",
              "label": "t:sections.main-article.blocks.featured_image.settings.image_height.options__1.label"
            },
            {
              "value": "small",
              "label": "t:sections.main-article.blocks.featured_image.settings.image_height.options__2.label"
            },
            {
              "value": "medium",
              "label": "t:sections.main-article.blocks.featured_image.settings.image_height.options__3.label"
            },
            {
              "value": "large",
              "label": "t:sections.main-article.blocks.featured_image.settings.image_height.options__4.label"
            }
          ],
          "default": "adapt",
          "label": "t:sections.main-article.blocks.featured_image.settings.image_height.label"
        }
      ]
    },
    {
      "type": "content_article",
      "name": "t:sections.main-article.settings.blocks.content_article",
      "limit": 1
    },
    {
      "type": "addons",
      "name": "t:sections.main-article.settings.blocks.addons",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "show_tags",
          "default": false,
          "label": "t:sections.all.blog_setting.show_tags"
        },
        {
          "type": "checkbox",
          "id": "show_share",
          "label": "t:sections.main-article.settings.show_share",
          "default": true
        }
      ]
    },
    {
      "type": "prev_next_articles",
      "name": "t:sections.main-article.settings.blocks.prev_next_articles",
      "limit": 1
    },
    {
      "type": "related",
      "name": "t:sections.main-article.related.heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "related_heading",
          "label": "t:sections.all.content_setting.heading.label",
          "default": "Related posts"
        },
        {
          "type": "select",
          "id": "image_ratio",
          "options": [
            {
              "value": "adapt",
              "label": "t:sections.all.image.aspect_ratio.adapt"
            },
            {
              "value": "square",
              "label": "t:sections.all.image.aspect_ratio.options__1"
            },
            {
              "value": "portrait",
              "label": "t:sections.all.image.aspect_ratio.options__2"
            },
            {
              "value": "landscape",
              "label": "t:sections.all.image.aspect_ratio.options__3"
            }
          ],
          "default": "adapt",
          "label": "t:sections.all.image.aspect_ratio.label"
        },
        {
          "type": "checkbox",
          "id": "show_category",
          "default": true,
          "label": "t:sections.all.blog_setting.show_category"
        },
        {
          "type": "checkbox",
          "id": "show_date",
          "label": "t:sections.main-article.settings.show_date",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "show_author",
          "default": true,
          "label": "t:sections.all.blog_setting.show_author"
        },
        {
          "type": "checkbox",
          "id": "show_excerpt",
          "label": "t:sections.main-article.settings.show_excerpt",
          "default": true
        }
      ]
    }
  ]
}
{% endschema %}
