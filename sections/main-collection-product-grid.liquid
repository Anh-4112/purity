{%- liquid
  assign theme_st = settings
  assign section_st = section.settings
  if section_st.section_width == 'fix_width'
    assign section_width = 'container'
  elsif section_st.section_width == 'full_width'
    assign section_width = 'full-width px-20'
  else
    assign section_width = 'fluid_container'
  endif
  assign scroll_animation = theme_st.scroll_animation
  assign items_per_row = section_st.items_per_row
  assign pagination_type = section_st.pagination_type
  assign filter_layout = section_st.filter_layout
  assign products_to_show = section_st.products_to_show
  assign enable_sorting = section_st.enable_sorting
  assign show_product_counts = section_st.show_product_counts
  assign enable_filtering = section_st.enable_filtering
  assign product_image_ratio = theme_st.product_image_ratio
  assign show_promotion = false
  assign show_step = false
  for block in section.blocks
    case block.type
      when 'promotion'
        assign products_to_show = products_to_show | minus: 1
        assign show_promotion = true
      when 'steps'
        assign show_step = true
    endcase
  endfor
  assign all_product = collection.products_count
  if all_product <= products_to_show
    assign products_to_show = all_product
  endif
  if all_product == 0 and collection.filters.size == 0
    assign enable_filtering = false
  endif
  assign sort_by = collection.sort_by | default: collection.default_sort_by
  if collection.url
    assign results_url = collection.url
    if collection.sort_by
      assign results_url = collection.url | append: '?sort_by=' | append: collection.sort_by
    endif
  endif
  assign items_per_row_tablet = items_per_row
  if items_per_row > 3
    assign items_per_row_tablet = items_per_row | minus: 1
  endif
  assign column_gap_slide = 0
  assign column_gap_mb = 0
  if section_st.column_gap == 'large'
    assign column_gap_slide = 30
    assign column_gap_mb = 20
  elsif section_st.column_gap == 'medium'
    assign column_gap_slide = 20
    assign column_gap_mb = 10
  elsif section_st.column_gap == 'small'
    assign column_gap_slide = 10
    assign column_gap_mb = 5
  endif
  assign index_promotion = 1
  assign total_active_values = 0
  for filter in collection.filters
    assign total_active_values = total_active_values | plus: filter.active_values.size
    if filter.type == 'price_range'
      if filter.min_value.value != null or filter.max_value.value != null
        assign total_active_values = total_active_values | plus: 1
      endif
    endif
  endfor

  assign ratio = '3/5'
  if product_image_ratio != 'adapt'
    case product_image_ratio
      when 'square'
        assign ratio = '1/1'
      when 'landscape'
        assign ratio = '4/3'
      when 'portrait'
        assign ratio = '3/4'
    endcase
  endif
-%}
{%- capture style -%}
  --section-pt: {{ section_st.padding_top }}; --section-pb: {{ section_st.padding_bottom }};
{%- endcapture -%}
{%- capture col_style -%}
  --col-desktop: {{ items_per_row }};--col-number:2;--col-tablet: {{ items_per_row_tablet }};--gap-desktop: {{ column_gap_slide }}px;--gap: {{ column_gap_mb }}px;
{%- endcapture -%}
<div
  id="Collection-{{ section.id }}"
  class="section-main-collection section"
  style="{{ style | strip | strip_newlines }}"
>
  <div
    id="ProductsGridContainer"
    class="{{ section_width }} filter-layout {{ filter_layout }}-filter{% if enable_filtering and filter_layout == 'vertical' %} flex gap{% endif %}{% if show_step %} overflow-hidden-mb{% endif %}"
    {% if enable_filtering and filter_layout == 'vertical' %}
      style="--col-width: 30rem;--gap-desktop: 6rem;--gap: 3rem;"
    {% endif %}
  >
    {%- paginate collection.products by products_to_show -%}
      {%- if enable_filtering and filter_layout == 'vertical' -%}
        <div id="CollectionSidebar" class="collection__sidebar col-1025-w-custom hidden block-1025">
          <div class="sticky-md top-30">
            {% render 'facets',
              results: collection,
              filter_layout: 'vertical',
              paginate: paginate,
              results_url: results_url
            %}
          </div>
        </div>
      {%- endif -%}
      <div
        id="CollectionResultsGird"
        class="collection__results-gird w-full{% if enable_filtering and filter_layout == 'vertical' %} col-1025-remaining{% endif %}"
      >
        <div class="sticky-md top-30">
          {%- if show_step -%}
            <div class="collection-steps pb-60 mb-60 border-bottom">
              {% if scroll_animation %}
                <motion-items-effect>
              {% endif %}
              <div class="free-scroll">
                <slide-section
                  class="swiper overflow-visible-mb"
                  data-section-id="{{ section.id }}"
                  data-autoplay="false"
                  data-effect="slide"
                  data-loop="false"
                  data-speed="500"
                  data-spacing="{{ column_gap_slide }}"
                  data-mobile="1.3"
                  data-desktop="3"
                  data-tablet="2"
                  data-arrow-center="true"
                >
                  <div class="swiper-wrapper">
                    {%- for block in section.blocks -%}
                      {%- liquid
                        assign block_st = block.settings
                        assign image = block_st.image
                        assign heading = block_st.heading
                        assign description = block_st.description
                        assign button_label = block_st.button_label
                        assign button_link = block_st.button_link
                      -%}
                      {%- if block.type == 'steps' -%}
                        <div class="swiper-slide motion-item">
                          <div class="product__promotion-banner hover-effect">
                            <a
                              {% if button_link == blank %}
                                role="link" aria-disabled="true"
                              {% else %}
                                href="{{ button_link | default: "#" }}"
                              {% endif %}
                              aria-label="{{ button_label }}"
                              class="block banner__media rounded"
                              style="--aspect-ratio: {% if image != blank %}{{ image.aspect_ratio }}{%- else -%}4/3{%- endif -%}"
                            >
                              {%- liquid
                                assign banner_alt = 'sections.collection_template.promotion_banner' | t
                                assign banner_alt = heading | default: banner_alt
                                assign banner_alt = image.alt | default: banner_alt
                              -%}
                              {%- if image -%}
                                {% render 'responsive-image',
                                  type: 'product',
                                  image: image,
                                  image_alt: banner_alt,
                                  container: section_width,
                                  column: items_per_row,
                                  column_mobile: 2,
                                  padding: column_gap_slide,
                                  motion: true,
                                  class: 'center_swiper-arrow'
                                %}
                              {%- else -%}
                                {% render 'placeholder-render', type: 'product' %}
                              {%- endif -%}
                            </a>
                            {%- if heading != blank or description != blank -%}
                              <div class="promotion-information mt-20">
                                {%- if heading != blank -%}
                                  <div class="heading h7">{{ heading }}</div>
                                {%- endif -%}
                                {%- if description != blank -%}
                                  <div class="description heading-color">{{ description }}</div>
                                {%- endif -%}
                                {%- if button_label != blank -%}
                                  <a
                                    {% if button_link == blank %}
                                      role="link" aria-disabled="true"
                                    {% else %}
                                      href="{{ button_link | default: "#" }}"
                                    {% endif %}
                                    aria-label="{{ button_label }}"
                                    class="btn-link border-animation inline-block mt-10 pointer"
                                    style="--btn-link-color: #000000;"
                                  >
                                    {{ button_label }}
                                  </a>
                                {%- endif -%}
                              </div>
                            {%- endif -%}
                          </div>
                        </div>
                      {%- endif -%}
                    {%- endfor -%}
                  </div>
                  <div class="swiper-pagination"></div>
                </slide-section>
              </div>
              {% if scroll_animation %}
                </motion-items-effect>
              {% endif %}
            </div>
          {%- endif -%}
          <div
            class="facets-toolbar flex align-center gap space-between mb-20"
            style="--gap-desktop: 50px; --gap: 15px;"
          >
            {%- if enable_filtering -%}
              <div class="facet-drawer grow-1{% if enable_filtering and filter_layout == 'drawer' %}{% else %} inline-flex hidden-1025{% endif %}">
                <button
                  id="FacetsDrawer"
                  class="button heading color btn-reset inline-flex gap-5 align-center body_weight pointer"
                  aria-label="{{ 'products.facets.filter' | t }}"
                >
                  <svg width="22" height="22" fill="none">
                    <path stroke="currentColor" stroke-linecap="round" stroke-width="1.8" d="M2.75 6.417h16.5M5.5 11h11M9.164 15.583h3.667"/>
                  </svg>
                  <span>{{ 'products.facets.filter_button' | t }}</span>
                </button>
                <facet-drawer
                  id="{{ section.id }}"
                  class="modal invisible transition-drawer fixed inset-0 z-15 pointer-none active-modal-js content-hidden"
                  style="--drawer-width: 45rem;"
                  drawer
                >
                  <modal-overlay class="modal-overlay pointer"></modal-overlay>
                  <div
                    class="modal-inner transition-drawer draw-mb drawer-left drawer-left-mb inset-y-0 color-default w-full fixed left-0 inset-y-0 z-2 bg-white"
                    role="dialog"
                    aria-modal="true"
                    aria-label="{{ 'products.facets.filter' | t }}"
                    tabindex="-1"
                  >
                    <div class="drawer__body flex h-full column">
                      <div
                        class="drawer__header h5 flex gap-10 space-between align-center drawer-spacing border-bottom"
                        style="--padding-block-desktop: 2.15rem;"
                      >
                        {{ 'products.facets.filter' | t }}
                        <button
                          type="button"
                          is="button-close-model"
                          class="modal__close pointer btn-reset w-30 h-full inline-flex align-center flex-end"
                          aria-label="Close"
                        >
                          <svg
                            width="14"
                            height="14"
                            viewBox="0 0 14 14"
                            fill="none"
                            class="icon-zoom transition-short will-change heading-color"
                          >
                            <use href="#icon-close"></use>
                          </svg>
                        </button>
                      </div>
                      <div class="drawer__inner overflow-y-auto custom-scrollbar grow-1 flex column">
                        {% render 'facets',
                          results: collection,
                          filter_layout: 'drawer',
                          paginate: paginate,
                          results_url: results_url
                        %}
                      </div>
                    </div>
                  </div>
                </facet-drawer>
              </div>
            {%- endif -%}
            {%- if show_product_counts -%}
              <div
                class="collection-count heading-color hidden block-md"
                role="status"
              >
                <span>
                  {%- if collection.results_count -%}
                    {{
                      'sections.collection_template.results_with_count'
                      | t: terms: collection.terms, count: collection.results_count
                    }}
                  {%- elsif collection.products_count == collection.all_products_count -%}
                    {{ 'products.facets.product_count_simple' | t: count: collection.products_count }}
                  {%- else -%}
                    {{
                      'products.facets.product_count'
                      | t: product_count: collection.products_count, count: collection.all_products_count
                    }}
                  {%- endif -%}
                </span>
              </div>
            {%- endif -%}
            {% if enable_sorting %}
              <facet-filters-form class="facets facets-vertical-sort">
                <form class="facets-vertical-form relative" id="FacetSortForm">
                  {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
                  <div class="select-custom facet-filters heading-color py-10">
                    <select-sorter tabindex="0" class="select-selected flex gap-10 align-center pointer rotate-animate">
                      <span>
                        {{- 'products.facets.sort_by_label' | t }}
                      </span>
                      <span class="inline-block-1025">
                        {%- for option in collection.sort_options -%}
                          {% if option.value == sort_by %}{{ option.name | escape }}{% endif %}
                        {%- endfor -%}
                      </span>
                      <svg
                        width="9"
                        height="6"
                        viewBox="0 0 9 6"
                        fill="none"
                        class="icon icon-down icon-rotate transition-short flex-auto w-custom"
                        style="--width: 9px;"
                      >
                        <use href="#icon-arrow-down"></use>
                      </svg>
                    </select-sorter>
                    <div
                      class="select-custom__content facet-filters__sort active-show absolute top-100 right-0 bg-white shadow p-20 p-1025-30 rounded-10 z-2 min-w-custom transition-short opacity-0 pointer-none"
                      id="SortBy"
                      style="--min-width: 22rem;"
                    >
                      <div
                        class="facet-filters__select flex column gap"
                        style="--gap-desktop: 8px; --gap: 8px;"
                      >
                        {%- for option in collection.sort_options -%}
                          <filter-sort
                            class="block text-color pointer align-self-start outlined-border"
                            value="{{ option.value | escape }}"
                            {% if option.value == sort_by %}
                              selected="selected"
                            {% endif %}
                          >
                            {{ option.name | escape }}
                          </filter-sort>
                        {%- endfor -%}
                      </div>
                    </div>
                  </div>
                  <select
                    name="sort_by"
                    class="facet-filters__select hidden"
                    aria-label="{{ 'products.facets.sort_button' | t }}"
                    aria-describedby="a11y-refresh-page-message"
                  >
                    {%- for option in collection.sort_options -%}
                      <option
                        value="{{ option.value | escape }}"
                        {% if option.value == sort_by %}
                          selected="selected"
                        {% endif %}
                      >
                        {{ option.name | escape }}
                      </option>
                    {%- endfor -%}
                  </select>
                </form>
              </facet-filters-form>
            {% endif %}
          </div>
          <div class="facets-filters-active">
            {% if total_active_values > 0 %}
              <div class="filters-count active-facets flex wrap gap-10 mb-30 fs-small">
                {%- for filter in collection.filters -%}
                  {%- for value in filter.active_values -%}
                    <div class="facet-remove">
                      <facet-remove>
                        <a
                          href="{{ value.url_to_remove }}"
                          class="border overflow-hidden px-20 py-11 btn-rounded pointer flex gap-10 lh-normal hover-heading-color"
                        >
                          {{ value.label | escape }}
                          <span class="active-facets__button-inner">
                            <svg width="9" height="10" viewBox="0 0 9 10" fill="none">
                              <use href="#icon-close"></use>
                            </svg>
                            <span class="visually-hidden">{{ 'products.facets.clear_filter' | t }}</span>
                          </span>
                        </a>
                      </facet-remove>
                    </div>
                  {%- endfor -%}
                  {% if filter.type == 'price_range' %}
                    {%- if filter.min_value.value != null or filter.max_value.value != null -%}
                      <div class="facet-remove">
                        <facet-remove>
                          <a
                            href="{{ filter.url_to_remove }}"
                            class="border overflow-hidden px-20 py-11 btn-rounded pointer flex gap-10 lh-normal hover-heading-color"
                          >
                            {%- if filter.min_value.value -%}
                              {{ filter.min_value.value | money }}
                            {%- else -%}
                              {{ 0 | money }}
                            {%- endif -%}
                            -
                            {%- if filter.max_value.value -%}
                              {{ filter.max_value.value | money }}
                            {%- else -%}
                              {{ filter.range_max | money }}
                            {%- endif -%}
                            <span class="active-facets__button-inner">
                              <svg width="9" height="10" viewBox="0 0 9 10" fill="none">
                                <use href="#icon-close"></use>
                              </svg>
                              <span class="visually-hidden">{{ 'products.facets.clear_filter' | t }}</span>
                            </span>
                          </a>
                        </facet-remove>
                      </div>
                    {%- endif -%}
                  {% endif %}
                {%- endfor -%}
                <div class="facet-remove facet-clear-all">
                  <facet-remove class="active-facets__button-wrapper">
                    <a
                      href="{{ results_url }}"
                      class="border overflow-hidden px-20 py-11 btn-rounded pointer flex gap-10 lh-normal hover-heading-color"
                    >
                      <span>{{ 'products.facets.clear_all' | t }}</span>
                    </a>
                  </facet-remove>
                </div>
              </div>
            {% endif %}
          </div>
          <div id="CollectionGird" class="collection__gird relative">
            {%- if collection.products.size == 0 -%}
              <div class="collection collection--empty" id="product-grid" data-id="{{ section.id }}">
                <div class="title-wrapper text-center">
                  <h2 class="title title--primary mt-50">
                    {{ 'sections.collection_template.no_products_found' | t -}}
                    <br>
                    {{
                      'sections.collection_template.use_fewer_filters_html'
                      | t: link: results_url, class: 'heading-color remove-underline border-animation'
                    }}
                  </h2>
                  <a
                    href="{{ routes.all_products_collection_url }}"
                    class="inline-block btn btn-primary mt-30"
                    aria-label="{{- 'general.continue_shopping' | t -}}"
                  >
                    {{- 'general.continue_shopping' | t -}}
                  </a>
                </div>
              </div>
            {%- else -%}
              {% if scroll_animation %}
                <motion-items-effect>
              {% endif %}
              <div
                class="collection grid-cols grid gap row-gap-30"
                id="product-grid"
                data-id="{{ section.id }}"
                style="{{ col_style | strip | strip_newlines }}"
              >
                {%- if collection.products.size > 0 -%}
                  {%- for product in collection.products -%}
                    {%- assign index = forloop.index0 -%}
                    {%- if show_promotion -%}
                      {%- for block in section.blocks -%}
                        {%- liquid
                          assign block_st = block.settings
                          assign image = block_st.image
                          assign subheading = block_st.subheading
                          assign heading = block_st.heading
                          assign description = block_st.description
                          assign button_label = block_st.button_label
                          assign promotion_link = block_st.promotion_link
                          assign promotion_position = block_st.promotion_position | minus: index_promotion
                        -%}
                        {%- if block.type == 'promotion' and promotion_position == index -%}
                          {%- assign index_promotion = index_promotion | plus: 1 -%}
                          <div
                            {{ block.shopify_attributes }}
                            class="product-item product-item-promotion relative motion-item"
                          >
                            {%- liquid
                              assign banner_alt = 'sections.collection_template.promotion_banner' | t
                              assign banner_alt = heading | default: banner_alt
                              assign banner_alt = image.alt | default: banner_alt
                            -%}
                            <div
                              class="promotion_inner h-full color-{{ block_st.color_scheme }}"
                              style="--aspect-ratio: {% if image != blank %}{{ image.aspect_ratio }}{%- else -%}4/3{%- endif -%}"
                            >
                              <a
                                {% if promotion_link == blank %}
                                  role="link" aria-disabled="true"
                                {% else %}
                                  href="{{ promotion_link }}"
                                {% endif %}
                                aria-label="{{ banner_alt }}"
                                class="block banner__media rounded absolute inset-0"
                                style="--aspect-ratio: {% if image != blank %}{{ image.aspect_ratio }}{%- else -%}4/3{%- endif -%}"
                              >
                                {%- if image -%}
                                  {% render 'responsive-image',
                                    type: 'product',
                                    image: image,
                                    image_alt: banner_alt,
                                    container: section_width,
                                    column: items_per_row,
                                    column_mobile: 2,
                                    padding: column_gap_slide,
                                    motion: true
                                  %}
                                {%- else -%}
                                  {% render 'placeholder-render', type: 'product' %}
                                {%- endif -%}
                              </a>
                              {%- if subheading != blank or heading != blank or button_label != blank -%}
                                <div
                                  class="promotion-information h-full z-1 justify-center text-center relative p-10 p-1025-30 flex column flex-end gap-20 gap-1025-30 absolute inset-0 z-1"
                                  style="--btn-padding-x: 1.5rem;"
                                >
                                  {%- if subheading != blank or heading != blank or button_label != blank -%}
                                    <div class="banner__box">
                                      {%- if subheading != blank -%}
                                        <div class="suheading h7 mb-10">{{ subheading }}</div>
                                      {%- endif -%}
                                      {%- if heading != blank -%}
                                        <h2 class="h3 mb-10 px-0 px-1025-22">
                                          {{ heading }}
                                        </h2>
                                      {%- endif -%}
                                      {%- if description != blank -%}
                                        <p class="description">{{ description }}</p>
                                      {%- endif -%}
                                    </div>
                                  {%- endif -%}
                                  {%- if button_label != blank -%}
                                    <a
                                      {% if promotion_link == blank %}
                                        role="link" aria-disabled="true"
                                      {% else %}
                                        href="{{ promotion_link }}"
                                        aria-label="{{ banner_alt }}"
                                      {% endif %}
                                      class="btn btn-primary w-full"
                                    >
                                      {{ button_label }}
                                    </a>
                                  {%- endif -%}
                                </div>
                              {%- endif -%}
                            </div>
                          </div>
                        {%- endif -%}
                      {%- endfor -%}
                      {% render 'card-product',
                        card_product: product,
                        section_id: section.id,
                        container: section_width,
                        column: items_per_row,
                        column_mobile: 2,
                        class: ' motion-item',
                        padding: column_gap_slide,
                        indexFor: forloop.index
                      %}
                    {%- else -%}
                      {% render 'card-product',
                        card_product: product,
                        section_id: section.id,
                        container: section_width,
                        column: items_per_row,
                        column_mobile: 2,
                        class: ' motion-item',
                        padding: column_gap_slide,
                        indexFor: forloop.index
                      %}
                    {%- endif -%}
                  {%- endfor -%}
                  {%- if show_promotion -%}
                    {%- for block in section.blocks -%}
                      {%- liquid
                        assign block_st = block.settings
                        assign image = block_st.image
                        assign subheading = block_st.subheading
                        assign heading = block_st.heading
                        assign description = block_st.description
                        assign button_label = block_st.button_label
                        assign promotion_link = block_st.promotion_link
                        assign promotion_position = block_st.promotion_position | minus: index_promotion
                      -%}
                      {%- if block.type == 'promotion' and promotion_position >= products_to_show -%}
                        <div
                          {{ block.shopify_attributes }}
                          class="product-item product-item-promotion relative motion-item"
                        >
                          <div
                            class="promotion_inner h-full color-{{ block_st.color_scheme }}"
                            style="--aspect-ratio:  {% if image != blank %}{{ ratio }}{%- else -%}4/3{%- endif -%}"
                          >
                            {%- liquid
                              assign banner_alt = 'sections.collection_template.promotion_banner' | t
                              assign banner_alt = heading | default: banner_alt
                              assign banner_alt = image.alt | default: banner_alt
                            -%}
                            <a
                              {% if promotion_link == blank %}
                                role="link" aria-disabled="true"
                              {% else %}
                                href="{{ promotion_link }}"
                              {% endif %}
                              aria-label="{{ banner_alt }}"
                              class="block banner__media rounded absolute inset-0"
                              style="--aspect-ratio: {% if image != blank %}{{ image.aspect_ratio }}{%- else -%}4/3{%- endif -%}"
                            >
                              {%- if image -%}
                                {% render 'responsive-image',
                                  type: 'product',
                                  image: image,
                                  image_alt: banner_alt,
                                  container: section_width,
                                  column: items_per_row,
                                  column_mobile: 2,
                                  padding: column_gap_slide,
                                  motion: true
                                %}
                              {%- else -%}
                                {% render 'placeholder-render', type: 'product' %}
                              {%- endif -%}
                            </a>
                            {%- if subheading != blank or heading != blank or button_label != blank -%}
                              <div
                                class="promotion-information h-full z-1 justify-center text-center relative p-10 p-1025-30 flex column flex-end gap-20 gap-1025-30 absolute inset-0 z-1"
                                style="--btn-padding-x: 1.5rem;"
                              >
                                {%- if subheading != blank or heading != blank or button_label != blank -%}
                                  <div class="banner__box">
                                    {%- if subheading != blank -%}
                                      <div class="suheading h7 mb-10">{{ subheading }}</div>
                                    {%- endif -%}
                                    {%- if heading != blank -%}
                                      <h2 class="h3 mb-10 px-0 px-1025-30">
                                        {{ heading }}
                                      </h2>
                                    {%- endif -%}
                                    {%- if description != blank -%}
                                      <p class="description">{{ description }}</p>
                                    {%- endif -%}
                                  </div>
                                {%- endif -%}
                                {%- if button_label != blank -%}
                                  <a
                                    {% if promotion_link == blank %}
                                      role="link" aria-disabled="true"
                                    {% else %}
                                      href="{{ promotion_link }}"
                                      aria-label="{{ banner_alt }}"
                                    {% endif %}
                                    class="btn btn-primary w-full"
                                  >
                                    {{ button_label }}
                                  </a>
                                {%- endif -%}
                              </div>
                            {%- endif -%}
                          </div>
                        </div>
                      {%- endif -%}
                    {%- endfor -%}
                  {%- endif -%}
                {%- else -%}
                  {% for i in (0..products_to_show) %}
                    {% render 'card-product', section_id: section.id %}
                  {% endfor %}
                {%- endif -%}
              </div>
              {% if scroll_animation %}
                </motion-items-effect>
              {% endif %}
              {%- liquid
                assign cur_page = paginate.current_page | times: 1
                assign amount_products = products_to_show | times: cur_page
                if amount_products > all_product
                  assign amount_products = all_product
                endif
                assign collection_products_count = collection.products_count | times: 1.0
              -%}
              {%- if pagination_type == 'button' or pagination_type == 'infinity' -%}
                <div
                  class="pagination-load-more mt-60 block text-center"
                >
                  <div class="paginate-progress {{amount_products}}">
                    <p class="counting_product load-more-amount mb-20">
                      {{-
                        'sections.collection_template.product_count.one'
                        | t: count: amount_products, product_count: collection.products_count
                      -}}
                    </p>
                    <div
                      class="load-more-progress-bar relative mx-auto h-custom rounded max-w-custom-all bg-custom"
                      style="--percent: {{ amount_products | divided_by: collection_products_count | times: 100 }}%; --amount: {{ amount_products }}; --count: {{ amount_products }};--height: 3px;--img-rounded: 5px;--max-width: 32rem;--bg-color-custom: #e5e5e5;"
                    ></div>
                  </div>
                  {% if all_product > products_to_show and amount_products < all_product %}
                    <loadmore-button
                      data-limit="{{ products_to_show }}"
                      data-pagination="{{ pagination_type }}"
                      data-limit="{{ products_to_show }}"
                      data-url="?page={{ paginate.current_page | plus: 1 }}"
                      class="relative btn btn-primary inline-flex content-center pointer transition w-custom max-w-100 mt-25"
                      style="--width: 20rem;"
                      aria-label="{{ 'sections.collection_template.load_more' | t }}"
                      tabindex="0"
                    >
                      <span class="btn-label hidden-on-load transition-short">
                        {{- 'sections.collection_template.load_more' | t -}}
                      </span>
                      {%- render 'loader' -%}
                    </loadmore-button>
                  {% endif %}
                </div>
              {%- else -%}
                {%- if paginate.pages > 1 -%}
                  {% render 'pagination', paginate: paginate, anchor: '' %}
                {%- endif -%}
              {%- endif -%}
            {%- endif -%}
            <div
              class="loading-filter opacity-0 pointer-none absolute inset-0 bg-white transition"
              style="--opacity: 0.6;"
            >
              {%- render 'loader' -%}
            </div>
          </div>
        </div>
      </div>
    {%- endpaginate -%}
    <script type="module" src="{{ 'facets.js' | asset_url }}"></script>
  </div>
</div>
