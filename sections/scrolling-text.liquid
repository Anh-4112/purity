{%- liquid
  assign section_st = section.settings

  if section_st.section_width == 'fix_width'
    assign section_width = 'container'
  elsif section_st.section_width == 'full_width'
    assign section_width = 'full-width'
  else
    assign section_width = 'full-width-gap'
  endif
  assign heading_size = section_st.heading_size

  assign header_size = ''
  if heading_size == 'small'
    assign header_size = ' h3-size'
  elsif heading_size == 'large'
    assign header_size = ' h1-size'
  else
    assign header_size = ' h2-size'
  endif

  assign space_between_item = 0
  if section_st.space_between == 'large'
    assign space_between_item = 30
  elsif section_st.space_between == 'medium'
    assign space_between_item = 15
  elsif section_st.space_between == 'small'
    assign space_between_item = 10
  endif
-%}

{%- capture style -%}
    --section-padding-top: {{ section_st.padding_top }}px; 
    --section-padding-bottom: {{ section_st.padding_bottom }}px;
{%- endcapture -%}

{%- capture col_style -%}
  {% if space_between_item < 15 %}--col-gap: {{ space_between_item }}px;{% else %}--col-gap: 15px;--col-gap-desktop: {{  space_between_item }}px;{% endif %}
{%- endcapture -%}
<div
  class="section__scrolling-text color-{{ section_st.color_scheme }} gradient"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ section_width }}">
    <div
      class="flex {% if section_st.uppercase %} uppercase{% endif %} {{ header_size }} gap"
      style="{{ col_style | strip | strip_newlines }}"
    >
      {%- for block in section.blocks -%}
        {%- liquid
          assign block_st = block.settings
          assign image = block_st.image_block
        -%}
        {%- case block.type -%}
          {%- when 'text' -%}
            {% if block_st.content != blank %}
              {% if block_st.link_text != blank %}
                <a href="{{ block_st.link_text }}">
              {%- endif -%}
              {{ block_st.content }}
              {% if block_st.link_text != blank %}
                </a>
              {%- endif -%}
            {% endif %}
          {%- when 'image' -%}
            <div class="scrolling-image">
              {% if image != blank %}
                {%- assign image_alt = block_st.image.alt | default: '' -%}

                {% if block_st.link_image != blank %}
                  <a href="{{ block_st.link_image }}">
                {%- endif -%}
                {% render 'responsive-image', image: image, type: 'other', image_alt: image_alt %}
                {% if block_st.link_image != blank %}
                  </a>
                {%- endif -%}
              {% else %}
                {%- render 'placeholder-render', class: 'block' -%}
              {% endif %}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

