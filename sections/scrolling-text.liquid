{{ 'section-scrolling-text.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign section_st = section.settings
  if section_st.section_width == 'fix_width'
    assign section_width = 'container'
  elsif section_st.section_width == 'full_width'
    assign section_width = 'full-width px-20'
  else
    assign section_width = 'fluid_container'
  endif
  assign heading_size = section_st.heading_size

  assign header_size = ''
  if heading_size == 'small'
    assign header_size = 'h3'
  elsif heading_size == 'large'
    assign header_size = 'h1'
  else
    assign header_size = 'h2'
  endif

  assign space_between_item = 0
  if section_st.space_between == 'large'
    assign space_between_item = 60
  elsif section_st.space_between == 'medium'
    assign space_between_item = 30
  elsif section_st.space_between == 'small'
    assign space_between_item = 10
  endif
-%}

{%- capture style -%}
    --section-pt: {{ section_st.padding_top }}px; 
    --section-pb: {{ section_st.padding_bottom }}px;
    --speed: {{ section_st.speed }}s;
{%- endcapture -%}

<div
  class="section__scrolling-text color-{{ section_st.color_scheme }} gradient"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ section_width }}">
    <div
      class="flex{% if section_st.uppercase %} uppercase{% endif %} {{ header_size }} marquee overflow-hidden gap-{{ space_between_item }} w-full justify-center"
    >
      {%- for i in (0..5) -%}
        <div
          class="flex animation-marquee animation__marquee-{{ section_st.direction }} whitespace-nowrap gap-{{ space_between_item }} align-center"
        >
          {%- for block in section.blocks -%}
            {% assign block_st = block.settings %}

            {%- case block.type -%}
              {%- when 'text' -%}
                {%- liquid
                  assign link_text = block_st.link_text
                  assign content = block_st.content
                  assign image = block_st.image_block
                -%}
                {% if content != blank %}
                  <a
                    {% if link_text == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ link_text | default: "#" }}"
                    {% endif %}
                    aria-label="{{ content }}"
                    class="no-underline{% if image == blank %} text_scroll{% endif %}"
                  >
                    {{ content }}
                  </a>
                {% endif %}
              {%- when 'image' -%}
                {%- liquid
                  assign image = block_st.image_block
                  assign link_image = block_st.link_image
                  assign image_alt_default = 'sections.scrolling_text.alt' | t
                  assign image_alt = image.alt | default: image_alt_default | escape
                -%}
                {%- if image != blank -%}
                  <div
                    class="scrolling-image image_scroll"
                    style="--image-height: {{ block_st.image_height }}px;"
                  >
                    <a
                      class="scrolling-image-item overflow-hidden block{% if block_st.rounded_image %} radius-50{% endif %}"
                      style="--image-height: {{ block_st.image_height }}px;"
                      {% if link_image == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ link_image | default: "#" }}"
                      {% endif %}
                      aria-label="{{ 'sections.scrolling_text.alt' | t }}"
                    >
                      {% render 'responsive-image', image: image, type: 'other', image_alt: image_alt %}
                    </a>
                  </div>
                {%- endif -%}
            {%- endcase -%}
          {%- endfor -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

