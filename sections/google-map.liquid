{% liquid
  assign section_st = section.settings
  assign map_iframe = section_st.map_iframe
  assign map_height = section_st.map_height
  if section_st.section_width == 'fix_width'
    assign section_width = 'container'
  elsif section_st.section_width == 'full_width'
    assign section_width = 'full-width px-20'
  else
    assign section_width = 'fluid_container'
  endif
%}
{%- capture style -%}
  --section-pt: {{ section_st.padding_top }}px; --section-pb: {{ section_st.padding_bottom }}px;
{%- endcapture -%}
{% style %}
  .map-section iframe {
    width: 100%;
    height: var(--map-height);
  }
{% endstyle %}
<div
  class="color-{{ section_st.color_scheme }} gradient section map-section"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ section_width }} relative" style="--map-height: {{ map_height }}px">
    {%- if section_st.title != blank or section_st.description != blank -%}
      <div class="section-header text-{{ section_st.text_alignment }}{% if section_st.text_alignment == 'right' %} row-reverse{% endif %}{% if section_st.text_alignment == 'center' %} flex-column{% endif %}">
        {%- if section_st.title != blank -%}
          <h2 class="section-heading">
            {{ section_st.title }}
          </h2>
        {%- endif -%}
        {%- if section_st.description != blank -%}
          <div class="short-des prose">
            {{ section_st.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
    {%- if map_iframe != blank -%}
      <div class="orverflow-hidden">{{ map_iframe }}</div>
    {%- else -%}
      <span>
        {{ 'sections.google_map.no_iframe' | t }}
      </span>
    {%- endif -%}
  </div>
</div>
{% schema %}
{
  "name": "t:sections.map.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer", "custom.overlay"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.general"
    },
    {
      "type": "select",
      "id": "section_width",
      "options": [
        {
          "value": "fix_width",
          "label": "t:sections.all.layout.fix_width"
        },
        {
          "value": "stretch_width",
          "label": "t:sections.all.layout.stretch_width"
        },
        {
          "value": "full_width",
          "label": "t:sections.all.layout.full_width"
        }
      ],
      "default": "fix_width",
      "label": "t:sections.all.layout.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.info",
      "default": "default-color-scheme"
    },
    {
      "type": "header",
      "content": "t:sections.all.content_header.label"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Google map",
      "label": "t:sections.all.content_setting.heading.label"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:sections.all.content_setting.description.label"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "options": [
        {
          "value": "start",
          "label": "t:sections.all.text_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.all.text_alignment.options__2.label"
        },
        {
          "value": "end",
          "label": "t:sections.all.text_alignment.options__3.label"
        }
      ],
      "default": "start",
      "label": "t:sections.all.text_alignment.label"
    },
    {
      "type": "header",
      "content": "t:sections.map.settings.header.heading_map"
    },
    {
      "type": "range",
      "id": "map_height",
      "min": 10,
      "max": 1000,
      "step": 10,
      "unit": "px",
      "default": 500,
      "label": "t:sections.map.settings.settings_map.map_height"
    },
    {
      "type": "textarea",
      "id": "map_iframe",
      "label": "t:sections.map.settings.settings_map.iframe_key",
      "info": "t:sections.map.settings.settings_map.info_iframe"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 48
    }
  ],
  "presets": [
    {
      "name": "t:sections.map.name"
    }
  ]
}
{% endschema %}
