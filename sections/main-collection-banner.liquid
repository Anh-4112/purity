{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.general"
    },
    {
      "type": "select",
      "id": "section_width",
      "options": [
        {
          "value": "fix_width",
          "label": "t:sections.all.layout.fix_width"
        },
        {
          "value": "stretch_width",
          "label": "t:sections.all.layout.stretch_width"
        },
        {
          "value": "full_width",
          "label": "t:sections.all.layout.full_width"
        }
      ],
      "default": "fix_width",
      "label": "t:sections.all.layout.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.info",
      "default": "default-color-scheme"
    },
    {
      "type": "header",
      "content": "t:sections.main-collection-banner.settings.heading.label"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.all.image.label"
    },
    {
      "type": "checkbox",
      "id": "use_collection_image",
      "default": true,
      "label": "t:sections.main-collection-banner.settings.use_collection_image.label",
      "info": "t:sections.main-collection-banner.settings.use_collection_image.info"
    },
    {
      "type": "select",
      "id": "image_position",
      "default": "left",
      "label": "t:sections.main-collection-banner.settings.image_position.label",
      "options": [
        {
          "value": "left",
          "label": "t:sections.main-collection-banner.settings.image_position.option__1"
        },
        {
          "value": "right",
          "label": "t:sections.main-collection-banner.settings.image_position.option__2"
        },
        {
          "value": "top",
          "label": "t:sections.main-collection-banner.settings.image_position.option__3"
        },
        {
          "value": "bottom",
          "label": "t:sections.main-collection-banner.settings.image_position.option__4"
        }
      ]
    },
    {
      "type": "range",
      "id": "image_opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "t:sections.main-collection-banner.settings.image_opacity.label",
      "default": 20
    },
    {
      "type": "select",
      "id": "image_height",
      "default": "adapt-image",
      "label": "t:sections.main-collection-banner.settings.image_height.label",
      "options": [
        {
          "value": "adapt-image",
          "label": "t:sections.main-collection-banner.settings.image_height.option__1"
        },
        {
          "value": "base-content",
          "label": "t:sections.main-collection-banner.settings.image_height.option__2"
        }
      ]
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "default": "middle-center",
      "label": "t:sections.all.desktop_content_position.label",
      "options": [
        {
          "value": "middle-left",
          "label": "t:sections.all.desktop_content_position.options__4.label"
        },
        {
          "value": "middle-center",
          "label": "t:sections.all.desktop_content_position.options__5.label"
        },
        {
          "value": "middle-right",
          "label": "t:sections.all.desktop_content_position.options__6.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 48
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.all.content_setting.heading.label"
    },
    {
      "type": "description",
      "name": "t:sections.all.content_setting.description.label"
    }
  ]
}
{% endschema %}
