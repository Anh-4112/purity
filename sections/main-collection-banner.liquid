{%- liquid
  assign section_st = section.settings

  if section_st.section_width == 'fix_width'
    assign section_width = 'container'
  elsif section_st.section_width == 'full_width'
    assign section_width = 'full-width px-20'
  else
    assign section_width = 'fluid_container'
  endif

  assign background_image = section_st.image
  assign use_collection_image = section_st.use_collection_image

  assign image_background = background_image
  if use_collection_image and collection.image != blank
    assign image_background = collection.image
  endif
  assign alt = image_background.alt | default: collection.title | escape
  assign image_height = section_st.image_height
-%}
{%- capture style -%}
  --section-pt: {{ section_st.padding_top }}; --section-pb: {{ section_st.padding_bottom }};--overlay-opacity: {{ section_st.image_opacity }}%;
{%- endcapture -%}

<div
  class="section section__page-heading color-{{ section_st.color_scheme }} gradient"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ section_width }} flex">
    {% if use_collection_image or background_image != blank %}
      <div
        class="banner__media absolute inset-0 h-{{ image_height }}"
        style="--aspect-ratio: {%- if image_height == 'adapt' and use_collection_image and collection.image -%}{{ collection.image.aspect_ratio }}{% elsif section_st.image != blank and image_height == 'adapt' %}{{ section_st.image.aspect_ratio }}{%- else -%} 16/9{%- endif -%}"
      >
        {%- liquid
          assign alt = collection.image.alt | default: collection.title | escape
          assign width = collection.image.width
          assign height = collection.image.height
        -%}
        {%- if use_collection_image and collection.image -%}
          {{
            collection.image
            | image_url: width: 1500
            | image_tag:
              loading: 'lazy',
              sizes: '100vw',
              widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
              height: height,
              width: width,
              alt: alt
          }}
        {%- elsif background_image != blank -%}
          {{
            section_st.image
            | image_url: width: 1500
            | image_tag: loading: 'lazy', sizes: '100vw', widths: '165, 360, 535, 750, 1070, 1500', alt: alt
          }}
        {%- else -%}
          {% render 'placeholder-render', type: 'collection', class: 'img-placeholder h-full w-full' %}
        {%- endif -%}
      </div>
    {% endif %}
    <div class="heading-content w-full flex z-2 relative {{ section_st.desktop_content_position }}">
      <div class="flex column">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              {% if collection.title != blank %}
                <h2 class="heading-title">
                  {{ collection.title }}
                </h2>
              {% endif %}
            {%- when 'description' -%}
              {% if collection.description != blank %}
                <div class="heading-description rte">
                  {{ collection.description }}
                </div>
              {% endif %}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.general"
    },
    {
      "type": "select",
      "id": "section_width",
      "options": [
        {
          "value": "fix_width",
          "label": "t:sections.all.layout.fix_width"
        },
        {
          "value": "stretch_width",
          "label": "t:sections.all.layout.stretch_width"
        },
        {
          "value": "full_width",
          "label": "t:sections.all.layout.full_width"
        }
      ],
      "default": "fix_width",
      "label": "t:sections.all.layout.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.info",
      "default": "default-color-scheme"
    },
    {
      "type": "header",
      "content": "t:sections.main-collection-banner.settings.heading.label"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.all.image.label"
    },
    {
      "type": "checkbox",
      "id": "use_collection_image",
      "default": true,
      "label": "t:sections.main-collection-banner.settings.use_collection_image.label",
      "info": "t:sections.main-collection-banner.settings.use_collection_image.info"
    },
    {
      "type": "select",
      "id": "image_position",
      "default": "left",
      "label": "t:sections.main-collection-banner.settings.image_position.label",
      "options": [
        {
          "value": "left",
          "label": "t:sections.main-collection-banner.settings.image_position.option__1"
        },
        {
          "value": "right",
          "label": "t:sections.main-collection-banner.settings.image_position.option__2"
        },
        {
          "value": "top",
          "label": "t:sections.main-collection-banner.settings.image_position.option__3"
        },
        {
          "value": "bottom",
          "label": "t:sections.main-collection-banner.settings.image_position.option__4"
        }
      ]
    },
    {
      "type": "range",
      "id": "image_opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "t:sections.main-collection-banner.settings.image_opacity.label",
      "default": 20
    },
    {
      "type": "select",
      "id": "image_height",
      "default": "adapt",
      "label": "t:sections.main-collection-banner.settings.image_height.label",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.main-collection-banner.settings.image_height.option__1"
        },
        {
          "value": "base-content",
          "label": "t:sections.main-collection-banner.settings.image_height.option__2"
        }
      ]
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "default": "middle-center",
      "label": "t:sections.all.desktop_content_position.label",
      "options": [
        {
          "value": "middle-left",
          "label": "t:sections.all.desktop_content_position.options__4.label"
        },
        {
          "value": "middle-center",
          "label": "t:sections.all.desktop_content_position.options__5.label"
        },
        {
          "value": "middle-right",
          "label": "t:sections.all.desktop_content_position.options__6.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 48
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.all.content_setting.heading.label"
    },
    {
      "type": "description",
      "name": "t:sections.all.content_setting.description.label"
    }
  ]
}
{% endschema %}
