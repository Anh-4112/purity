{%- liquid
  assign section_st = section.settings
-%}
{%- capture style -%}
  --section-pt: {{ section_st.padding_top }}; --section-pb: {{ section_st.padding_bottom }};
{%- endcapture -%}
<div class="template-404 container">
  <div
    class="error__page-content w-full section"
    style="{{ style | strip | strip_newlines }}"
  >
    {% if section_st.image != blank %}
      <div
        style="{%- if section_st.image != blank -%}--aspect-ratio: {{ section_st.image.aspect_ratio }};{% endif %};"
      >
        {%- assign image_alt = section_st.image.alt | escape | default: 'image' -%}
        {{
          section_st.image
          | image_url: width: 1500
          | image_tag: loading: 'lazy', sizes: '100vw', widths: '165, 360, 535, 750, 1070, 1500', alt: image_alt
        }}
      </div>
    {% endif %}
    <div class="page-title">
      <h1>
        {{ 'templates.404.title' | t }}
      </h1>
    </div>
    <p>
      {{ 'templates.404.subtext' | t }}
    </p>
    <a href="{{ routes.root_url }}" aria-label="{{ 'general.continue_shopping' | t }}">
      {{ 'general.continue_shopping' | t }}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-404.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.general"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.all.image.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 48
    }
  ]
}
{% endschema %}
