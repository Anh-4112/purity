{%- liquid
  assign section_st = section.settings
  assign menu_store_policies = section_st.menu_store_policies
  assign payment_enable = section_st.payment_enable

  if section_st.section_width == 'fix_width'
    assign section_width = 'container'
  elsif section_st.section_width == 'full_width'
    assign section_width = 'full-width px-20'
  else
    assign section_width = 'fluid_container'
  endif
-%}

{%- capture style -%}
  --section-pt: {{ section_st.padding_top }}; --section-pb: {{ section_st.padding_bottom }};
{%- endcapture -%}

<footer
  class="footer color-{{ section_st.color_scheme }} gradient"
  style="{{ style | strip | strip_newlines }}"
>
  {%- if section_st.enable_back_top -%}
    <back-to-top>
      <svg width="10" height="13" fill="none">
        <path fill="currentColor" d="M9.746 5.254h.02A.795.795 0 0 1 10 5.84a.838.838 0 0 1-.234.586.862.862 0 0 1-.606.234.838.838 0 0 1-.586-.234L5 2.852 1.426 6.426a.862.862 0 0 1-.606.234.772.772 0 0 1-.566-.234A.805.805 0 0 1 0 5.84c0-.235.085-.43.254-.586l4.16-4.18A.795.795 0 0 1 5 .84c.234 0 .43.078.586.234l4.16 4.18Zm0 5.82h.02c.156.17.234.371.234.606 0 .221-.078.41-.234.566a.826.826 0 0 1-1.192 0L5 8.672l-3.574 3.574a.826.826 0 0 1-.606.254.743.743 0 0 1-.566-.254A.743.743 0 0 1 0 11.68c0-.235.085-.437.254-.606l4.16-4.16A.764.764 0 0 1 5 6.66c.234 0 .43.085.586.254l4.16 4.16Z"/>
      </svg>
    </back-to-top>
  {%- endif -%}
  <div class="footer__middle">
    <div class="{{ section_width }}">
      {%- if section.blocks.size > 0 -%}
        {%- liquid
          assign menu_item = 0
        -%}
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'menu_block' -%}
              {%- liquid
                assign menu_item = menu_item | plus: 1
              -%}
          {%- endcase -%}
        {%- endfor -%}
        <div class="footer__blocks flex">
          {%- for block in section.blocks -%}
            {% assign block_st = block.settings %}
            <div
              class="footer-block col-1025-w-custom {{ block.type }}"
              style="--col-width: {{ block_st.width }}; --menu-list: {{ menu_item }};"
              {{ block.shopify_attributes }}
            >
              {%- case block.type -%}
                {%- when 'newsletter_block' -%}
                  <div class="footer-block__newsletter">
                    <div
                      class="footer-block__newsletter-inner"
                    >
                      {%- if block_st.heading != blank or block_st.description != blank -%}
                        <div class="footer-block__newsletter-heading">
                          {%- if block_st.heading != blank -%}
                            <h3 class="footer__block-heading collapsible-title relative">
                              {{- block_st.heading | escape -}}
                            </h3>
                          {%- endif -%}
                          {%- if block_st.description != blank -%}
                            <div class="footer__block-description">
                              {{ block_st.description }}
                            </div>
                          {%- endif -%}
                        </div>
                      {%- endif -%}
                      {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
                        <input type="hidden" name="contact[tags]" value="newsletter">
                        <div class="newsletter-form__field-wrapper">
                          <div class="field">
                            <div class="flex">
                              <input
                                id="NewsletterForm--{{ section.id }}"
                                type="email"
                                name="contact[email]"
                                class="field__input show-placeholder"
                                value="{{ form.email }}"
                                aria-required="true"
                                autocapitalize="off"
                                autocomplete="email"
                                {% if form.errors %}
                                  aria-invalid="true"
                                  aria-describedby="ContactFooter-error"
                                {% elsif form.posted_successfully? %}
                                  aria-describedby="ContactFooter-success"
                                {% endif %}
                                placeholder="{%- if block_st.email_placeholder != blank -%}{{ block_st.email_placeholder }} {%- else -%} {{ 'newsletter.label' | t }} {%- endif -%}"
                                required
                                pattern=".+\.[a-zA-Z]{2,6}"
                              >
                              <label class="visually-hidden" for="NewsletterForm--{{ section.id }}">
                                {{ 'newsletter.label' | t }}
                                <span class="required">*</span></label
                              >
                            </div>
                            <button
                              type="submit"
                              class="w-full newsletter-form__button"
                              name="commit"
                              id="Subscribe-{{ section.id }}"
                              aria-label="{{ 'subscribe.button_label' | t }}"
                            >
                              <svg width="6" height="11" fill="none">
                                <use href="#icon-next" />
                              </svg>
                            </button>
                          </div>
                          {%- if form.errors -%}
                            <small class="newsletter-form__message form__message" id="ContactFooter-error">
                              {%- render 'icon-error' -%}
                              {{- form.errors.translated_fields.email | capitalize }}
                              {{ form.errors.messages.email -}}
                            </small>
                          {%- endif -%}
                        </div>
                        {%- if form.posted_successfully? -%}
                          <div
                            class="newsletter-form__message newsletter-form__message--success form__message"
                            id="ContactFooter-success"
                            tabindex="-1"
                          >
                            {%- render 'icon-success' -%}
                            {{- 'newsletter.success' | t }}
                          </div>
                        {%- else -%}
                        {%- endif -%}
                      {%- endform -%}
                      {%- if block_st.note != blank -%}
                        <div class="footer__block-note">
                          {{ block_st.note }}
                        </div>
                      {%- endif -%}
                    </div>
                  </div>
                {%- when 'menu_block' -%}
                  {%- if block_st.menu != blank or block_st.heading != blank -%}
                    <details class="collapsible-row" is="collapsible-row">
                      <summary class="collapsible-row__summary">
                        <h3 class="footer__block-heading collapsible-heading">
                          <span>
                            {{- block_st.heading | default: block_st.menu.title | escape -}}
                          </span>
                          {%- if block_st.menu != blank -%}
                            <svg class="icon icon-down transition-short" width="10" height="6">
                              <use href="#icon-arrow-down"></use>
                            </svg>
                          {%- endif -%}
                        </h3>
                      </summary>
                      {%- if block_st.menu != blank -%}
                        <div class="footer-block-border">
                          <ul class="footer__block-content collapsible-row__content">
                            {%- for link in block_st.menu.links -%}
                              <li>
                                <a
                                  href="{{ link.url }}"
                                  aria-label="{{ link.title }}"
                                  class="{% if link.active %} list-menu__item--active{% endif %}"
                                >
                                  {{ link.title }}
                                </a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        </div>
                      {%- endif -%}
                    </details>
                  {%- endif -%}
                {%- when 'contact_bar_block' -%}
                  <details class="collapsible-row" is="collapsible-row">
                    {%- if block_st.store_heading != blank -%}
                      <summary class="collapsible-row__summary">
                        <h3 class="footer__block-heading collapsible-heading relative">
                          <span>
                            {{ block_st.store_heading | escape }}
                          </span>
                          <svg class="icon icon-down transition-short" width="10" height="6">
                            <use href="#icon-arrow-down"></use>
                          </svg>
                        </h3>
                      </summary>
                    {%- endif -%}
                    <div class="footer-block-border">
                      <div
                        class="collapsible-row__content"
                      >
                        {%- if block_st.store_address or block_st.store_email or block_st.store_phone %}
                          <div class="footer_store-infor">
                            {%- if block_st.store_address != blank -%}
                              <div class="footer__block-info">
                                <div class="footer__info-content">
                                  {{ block_st.store_address }}
                                </div>
                              </div>
                            {%- endif -%}
                            {%- if block_st.store_phone != blank -%}
                              <div class="footer__store-info">
                                <a
                                  href="tel:{{ block_st.store_phone }}"
                                  class="footer__info-content"
                                  aria-label=" {{ block_st.store_phone }}"
                                >
                                  {{ block_st.store_phone }}
                                </a>
                              </div>
                            {%- endif -%}
                            {%- if block_st.store_email != blank -%}
                              <div class="footer__store-info">
                                <a
                                  href="mailto:{{ block_st.store_email }}"
                                  class="footer__info-content"
                                >
                                  {{ block_st.store_email }}
                                </a>
                              </div>
                            {%- endif -%}
                          </div>
                        {%- endif -%}
                        {%- if shop.features.follow_on_shop? and section_st.enable_follow_on_shop -%}
                          <div class="footer__follow-on-shop">
                            {% comment %} TODO: enable theme-check once `login_button` is accepted as valid filter {% endcomment %}
                            {% # theme-check-disable %}
                            {{ shop | login_button: action: 'follow' }}
                            {% # theme-check-enable %}
                          </div>
                        {%- endif -%}
                        {%- if block_st.show_social -%}
                          <social-icon class="social-icon">
                            {% render 'social-icons' %}
                          </social-icon>
                        {%- endif -%}
                        {%- if block_st.store_description != blank -%}
                          <div class="footer__block-info">
                            {{ block_st.store_description }}
                          </div>
                        {%- endif -%}
                      </div>
                    </div>
                  </details>
              {%- endcase -%}
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>
  <div class="footer__bottom">
    <div class="{{ section_width }}">
      <div
        class="flex"
      >
        <div class="footer__bottom--left">
          {%- if section_st.enable_country_selector or section_st.enable_language_selector -%}
            {%- if localization.available_countries.size > 1 or localization.available_languages.size > 1 -%}
              <div class="footer__column flex footer__localization">
                {%- if section_st.enable_country_selector -%}
                  {%- render 'country-localization', localPosition: 'FooterCountry' -%}
                {%- endif -%}
                {%- if section_st.enable_language_selector -%}
                  {%- render 'language-localization', localPosition: 'FooterLanguage' -%}
                {%- endif -%}
              </div>
            {%- endif -%}
          {%- endif -%}
          <div class="footer__copyright">
            &copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url -}}
            . {{ powered_by_link }}
          </div>
        </div>
        {%- if payment_enable or menu_store_policies != blank -%}
          <div class="footer__bottom--right">
            {%- if payment_enable -%}
              <div class="footer__payment">
                <ul class="list-payment">
                  {%- for type in shop.enabled_payment_types -%}
                    <li class="list-payment__item">
                      {{ type | payment_type_svg_tag: class: 'payment__icon' }}
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            {%- endif -%}
            {%- if menu_store_policies != blank -%}
              <div class="menu__policies">
                <ul class="menu__policies-list flex">
                  {%- for link in menu_store_policies.links -%}
                    <li>
                      <a
                        href="{{ link.url }}"
                        aria-label="{{ link.title }}"
                        class="{% if link.active %} list-menu__item--active{% endif %}"
                      >
                        {{ link.title }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

