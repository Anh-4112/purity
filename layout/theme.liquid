{% liquid
  assign theme_st = settings
%}
<!doctype html>
<html class="js{% if theme_st.rtl %} rtl{% endif %}" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}
    {%- unless theme_st.heading_font.system? and theme_st.body_font.system? -%}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}
    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}
    <script defer="defer" src="{{ 'swiper-bundle.min.js' | asset_url }}"></script>
    <script type="importmap">
      {
        "imports": {
          "theme": "{{ 'theme.js' | asset_url }}",
          "module_slide": "{{ 'module_slide.js' | asset_url }}"
        }
      }
    </script>
    <script type="module" src="{{ 'theme.js' | asset_url }}"></script>
    {{ content_for_header }}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    {{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
    {% if theme_st.rtl %}{{ 'rtl.css' | asset_url | stylesheet_tag: preload: true }}{% endif %}
    <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}" media="print" onload="this.media='all'">
    <noscript><link rel="stylesheet" href="{{ 'theme.css' | asset_url }}"></noscript>
    {% liquid
      assign scheme_classes = ''
      assign body_font_bold = settings.type_body_font | font_modify: 'weight', 'bold'
      assign body_font_italic = settings.type_body_font | font_modify: 'style', 'italic'
      assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
    %}

    {% style %}
      {{ settings.body_font | font_face: font_display: 'swap' }}
      {{ body_font_bold | font_face: font_display: 'swap' }}
      {{ body_font_italic | font_face: font_display: 'swap' }}
      {{ body_font_bold_italic | font_face: font_display: 'swap' }}
      {{ settings.heading_font | font_face: font_display: 'swap' }}
      {% for scheme in settings.color_schemes -%}
        {% assign scheme_classes = scheme_classes | append: ', .color-' | append: scheme.id %}
        {% if forloop.index == 1 -%}
          :root,
        {%- endif %}
        .color-{{ scheme.id }}{
          --color-background: {{ scheme.settings.background }};
          {% if scheme.settings.background_gradient != empty %}
          --gradient-background: {{ scheme.settings.background_gradient }};
          {% else %}
          --gradient-background: {{ scheme.settings.background }};
          {% endif %}
          --color-primary: {{ scheme.settings.color_general_accent }};
          --color-primary-rgb: {{ scheme.settings.color_general_accent.red }}, {{ scheme.settings.primary_color.green }}, {{ scheme.settings.primary_color.blue }};
          --color-text: {{ scheme.settings.text_color }};
          --color-text-rgb: {{ scheme.settings.text_color.red }}, {{ scheme.settings.text_color.green }}, {{ scheme.settings.text_color.blue }};
          --color-heading: {{ scheme.settings.heading_color }};
          --color-heading-rgb:{{ scheme.settings.heading_color.red }}, {{ scheme.settings.heading_color.green }}, {{ scheme.settings.heading_color.blue }};
          --color-border: {{ scheme.settings.border_color }};
          /* Button primary */
          --btn-primary-color: {{ scheme.settings.btn_primary_color }};
          --btn-primary-hover-color: {{ scheme.settings.btn_primary_hover_color }};
          --btn-primary-bg-color: {{ scheme.settings.btn_primary_background }};
          --btn-primary-hover-bg-color: {{ scheme.settings.btn_primary_hover_background }};
          /* Button outline */
          --btn-outline-color: {{ scheme.settings.btn_outline_color }};
          --btn-outline-border-color: {{ scheme.settings.btn_outline_border_color }};
          /* Button link */
          --btn-link-color: {{ scheme.settings.btn_outline_color }};
          --btn-link-hover-color: {{ scheme.settings.btn_outline_color }};
          --input-color: var(--color-text);
          --input-placeholder-color: rgba(var(--color-heading-rgb), 0.55);
          --input-bg: rgba({{ scheme.settings.background.red }}, {{ scheme.settings.background.green }}, {{ scheme.settings.background.blue }}, 0.6);
        }
      {% endfor %}
      {{ scheme_classes | prepend: 'body' }} {
        color: var(--color-text);
        background-color: var(--color-background);
      }
      :root {
        --body-font-size: 1.4rem;
        --body-font-family: {{ theme_st.body_font.family }}, {{ theme_st.body_font.fallback_families }};
        --body-font-style: {{ theme_st.body_font.style }};
        --body-font-weight: {{ theme_st.body_font.weight }};
        --body-font-weight-bold: {{ theme_st.body_font.weight | plus: 300 | at_most: 1000 }};
        --body-line-height: calc(1 + 0.71428 / var(--body-font-scale));
        --rounded-radius-style: {% if theme_st.rounded_corner %}5px{% endif %};

        --heading-font: {{ theme_st.heading_font.family }}, {{ theme_st.heading_font.fallback_families }};
        --heading-font-style: {{ theme_st.heading_font.style }};
        --heading-weight: {{ theme_st.heading_font.weight }};
        --heading-text-transform: {{ theme_st.heading_text_transform }};
        --subheading-weight: {{ theme_st.subheading_weight }};

        --menu-font: {% if theme_st.menu_font == 'menu_body_font' %}{{ theme_st.body_font.family }}{% else %}{{ theme_st.heading_font.family }}{% endif %}, {{ theme_st.body_font.fallback_families }};
        --medium-font-weight: {% if theme_st.heading_font.weight > '400' %}600{% else %}{{ theme_st.heading_font.weight }}{% endif %};
        --menu-font-weight: {{ theme_st.menu_weight }};

        --body-font-scale: {{ theme_st.body_font_size_scale | divided_by: 100.0 }};
        --heading-font-scale: {{ theme_st.heading_font_size_scale | divided_by: 100.0 }};
        --rounded-radius: {% if theme_st.rounded_corner %}5px{% endif %};

        --btn-font: {% if theme_st.button_font == 'button_body_font' %}{{ theme_st.body_font.family }}{% else %}{{ theme_st.heading_font.family }}{% endif %}, {{ theme_st.body_font.fallback_families }};
        --btn-text-transform: {{ theme_st.button_text_transform }};
        --btn-border-radius: {% if theme_st.rounded_corner %}{% if theme_st.rounded_corner_style == 'rounded_corner_large' %}10px{% else %}3px{% endif %}{% endif %};
        --btn-font-weight:{% if theme_st.button_font == 'button_body_font' %}var(--subheading-weight,var(--body-font-weight)){% else %}var(--heading-font-weight){% endif %};
        --btn-padding-y: 1.6rem;
        --btn-padding-x: 4rem;
        --btn-font-size: {% if theme_st.button_text_transform == 'uppercase' %}calc(var(--body-font-size, 1.4rem) - 2px){% else %}var(--body-font-size, 1.4rem){% endif %};

        --input-height: 5rem;
        --rate-color: rgb({{ theme_st.color_product_rate.red }}, {{ theme_st.color_product_rate.green }}, {{ theme_st.color_product_rate.blue }});
        --page-width: {{ theme_st.page_width | divided_by: 10 }}rem;
        --page-width-margin: {% if theme_st.page_width == '1600' %}2{% else %}0{% endif %}rem;

        --logo-width: {{ theme_st.logo_width }}px;
        --bs-gutter-x: 4rem;
        --bs-gutter-y: 0;

        --color-white: #FFFFFF;
        --dark-color: #000;
        --responsive-rate: ((100vw - 575px) / (1600 - 575));
        --heading-letter-spacing: {% if theme_st.heading_letter_spacing == '0.25em' %}0.15em{% else %}{{ theme_st.heading_letter_spacing }}{% endif %};

        --transition: all 0.4s;
        --duration-short: 0.3s;
        --transition-drawer: all 0.3s;
        --overlay-bg: rgba(0, 0, 0, 0.60);
        --responsive-ratio: 0.7;
        --gap: 2rem;
        --accent-color-second: #f5f5f5;
        --section-spacing: 6rem;

        --product-spacing-top: 2rem;
        --product-name-size: 2.2rem;
        --product-price-size: 1.4rem;
        --product-item-spacing: 4rem;
        --sale-bg: rgb({{ theme_st.sale_background.red }}, {{ theme_st.sale_background.green }}, {{ theme_st.sale_background.blue }});
        --sale-color: rgb({{ theme_st.sale_color.red }}, {{ theme_st.sale_color.green }}, {{ theme_st.sale_color.blue }});
        --new-bg: rgb({{ theme_st.new_background.red }}, {{ theme_st.new_background.green }}, {{ theme_st.new_background.blue }});
        --new-color: rgb({{ theme_st.new_color.red }}, {{ theme_st.new_color.green }}, {{ theme_st.new_color.blue }});
        --preorder-bg: rgb({{ theme_st.pre_order_background.red }}, {{ theme_st.pre_order_background.green }}, {{ theme_st.pre_order_background.blue }});
        --preorder-color: rgb({{ theme_st.pre_order_color.red }}, {{ theme_st.pre_order_color.green }}, {{ theme_st.pre_order_color.blue }});
        ---outstock-bg: rgb({{ theme_st.sold_out_background.red }}, {{ theme_st.sold_out_background.green }}, {{ theme_st.sold_out_background.blue }});
        --outstock-color: rgb({{ theme_st.sold_out_color.red }}, {{ theme_st.sold_out_color.green }}, {{ theme_st.sold_out_color.blue }});
        ---custom-bg: rgb({{ theme_st.custom_badge_background.red }}, {{ theme_st.custom_badge_background.green }}, {{ theme_st.custom_badge_background.blue }});
        --custom-color: rgb({{ theme_st.custom_badge_color.red }}, {{ theme_st.custom_badge_color.green }}, {{ theme_st.custom_badge_color.blue }});
        --shadow: 0px 5px 30px 0px rgba(0, 0, 0, 0.05);
      }
      *,
      *::before,
      *::after {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        -webkit-tap-highlight-color: transparent;
      }

      html {
        font-size: calc(var(--body-font-scale) * 62.5%);
        margin: 0;
        padding: 0;
        border: 0;
        height: 100%;
        vertical-align: baseline;
        overflow-x: hidden;
        box-sizing: border-box;
        -webkit-text-size-adjust: 100%;
      }
      body {
        min-height: 100vh;
        margin: 0;
        font-size: var(--body-font-size, 1.4rem);
        font-family: var(--body-font-family);
        font-style: var(--body-font-style);
        font-weight: var(--body-font-weight);
        line-height: var(--body-line-height, calc(1 + 0.71428 / var(--body-font-scale)));
        -webkit-font-smoothing: antialiased;
        -webkit-text-size-adjust: 100%;
        text-rendering: optimizeSpeed;
        overflow-wrap: break-word;
        display: flex;
        -webkit-flex-direction: column;
        -ms-flex-direction: column;
        flex-direction: column;
      }
      #MainContent{
        -webkit-flex-grow: 1;
        flex-grow: 1;
      }
    {% endstyle %}
    <script>
      if (Shopify.designMode) {
        document.documentElement.classList.add('shopify-design-mode');
      }
    </script>
  </head>

  <body>
    <a class="skip-to-content-link button visually-hidden" href="#MainContent">
      {{ 'accessibility.skip_to_text' | t }}
    </a>

    {% sections 'header-group' %}

    <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    <ul hidden>
      <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
      <li id="a11y-new-window-message">{{ 'accessibility.link_messages.new_window' | t }}</li>
    </ul>
  </body>
</html>
